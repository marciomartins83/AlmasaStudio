{% extends 'base.html.twig' %}

{% block title %}Lista de Endereços - Almasa{% endblock %}

{% block content %}
<div class="container my-4">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Dashboard', 'url': path('app_dashboard')}
        ],
        'current': 'Endereços'
    } %}
    <h2 class="fs-3 fw-bold mb-4 text-dark">Lista de Endereços</h2>

    <p class="text-secondary">Aqui você pode gerenciar estados, cidades, bairros e logradouros.</p>

    <div class="row g-4">
        {% set cards = [
            {'title': 'Estados', 'description': 'Lista de estados.', 'link': path('app_estado_index'), 'icon': 'flag', 'details': 'Aqui você pode visualizar e gerenciar todos os estados cadastrados no sistema.'},
            {'title': 'Cidades', 'description': 'Lista de cidades.', 'link': path('app_cidade_index'), 'icon': 'buildings', 'details': 'Gerencie as cidades cadastradas e organize os endereços corretamente.'},
            {'title': 'Bairros', 'description': 'Lista de bairros.', 'link': path('app_bairro_index'), 'icon': 'signpost', 'details': 'Adicione e edite bairros vinculados às cidades existentes.'},
            {'title': 'Logradouros', 'description': 'Lista de logradouros.', 'link': path('app_logradouro_index'), 'icon': 'geo-alt', 'details': 'Gerencie ruas, avenidas e demais logradouros cadastrados no sistema.'}
        ] %}

        {% for card in cards %}
            <div class="col-md-4">
                <div class="almasa-card h-100" style="cursor: pointer;" onclick="window.location='{{ card.link }}'">
                    <div class="almasa-card-body">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-{{ card.icon }} fs-2 almasa-text-gradient me-2"></i>
                            <h3 class="fs-5 fw-semibold m-0">{{ card.title }}</h3>
                        </div>
                        <p class="text-secondary">{{ card.description }}</p>
                        <button class="btn btn-link p-0 almasa-text-gradient" onclick="event.stopPropagation(); toggleDetails('{{ loop.index }}')">
                            Ver mais →
                        </button>
                        <p id="details-{{ loop.index }}" class="text-muted mt-2 d-none">{{ card.details }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
<script src="{{ asset('js/dashboard/dashboard.js') }}"></script>
{% endblock %}