{% extends 'base.html.twig' %}

{% block title %}Pessoas Corretores{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Dashboard', 'url': path('app_dashboard')}
        ],
        'current': 'Lista de Corretores'
    } %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-user-tie"></i> Pessoas Corretores</h1>
        <a href="{{ path('app_pessoa_corretor_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Novo Corretor
        </a>
    </div>

    {% include '_partials/search_panel.html.twig' with {
        filterDefs: pagination.filterDefs,
        filters: pagination.filters,
        routeName: 'app_pessoa_corretor_index',
        itemsPerPage: pagination.itemsPerPage,
        sortField: pagination.sortField,
        sortDir: pagination.sortDir
    } %}

    {% include '_partials/sort_panel.html.twig' with {
        sortOptions: pagination.sortOptions,
        sortField: pagination.sortField,
        sortDir: pagination.sortDir,
        routeName: 'app_pessoa_corretor_index',
        filters: pagination.filters,
        itemsPerPage: pagination.itemsPerPage
    } %}

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Pessoa</th>
                    <th>CRECI</th>
                    <th>Status</th>
                    <th>Data Cadastro</th>
                    <th>Usuário</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for corretor in pagination.items %}
                <tr>
                    <td>{{ corretor.id }}</td>
                    <td>{{ corretor.pessoa ? corretor.pessoa.nome : '-' }}</td>
                    <td>{{ corretor.creci ?? '-' }}</td>
                    <td>
                        {% if corretor.ativo %}
                            <span class="badge bg-success">Ativo</span>
                        {% else %}
                            <span class="badge bg-secondary">Inativo</span>
                        {% endif %}
                    </td>
                    <td>{{ corretor.dataCadastro ? corretor.dataCadastro|date('d/m/Y') : '-' }}</td>
                    <td>{{ corretor.usuario ?? '-' }}</td>
                    <td>
                        <a href="{{ path('app_pessoa_corretor_edit', {'id': corretor.id}) }}" class="btn btn-sm btn-primary">Editar</a>
                        <form method="post" action="{{ path('app_pessoa_corretor_delete', {'id': corretor.id}) }}" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ corretor.id) }}">
                            <button class="btn btn-sm btn-danger" onclick="return confirm('Confirma exclusão?')">Excluir</button>
                        </form>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {% include '_partials/pagination.html.twig' with {
        totalItems: pagination.totalItems,
        currentPage: pagination.currentPage,
        itemsPerPage: pagination.itemsPerPage,
        totalPages: pagination.totalPages,
        search: pagination.search,
        filters: pagination.filters,
        sortField: pagination.sortField,
        sortDir: pagination.sortDir,
        routeName: 'app_pessoa_corretor_index',
        showSearch: false
    } %}
</div>
{% endblock %}

{% block javascripts %}{{ parent() }}{{ encore_entry_script_tags('crud_filters') }}{% endblock %}
