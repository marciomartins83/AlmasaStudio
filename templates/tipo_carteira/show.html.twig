{% extends 'base.html.twig' %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Tipos', 'url': path('app_dashboard_tipos_index')}
        ],
        'current': 'Detalhes do Tipo de Carteira'
    } %}

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5><i class="fas fa-wallet"></i> Tipo de Carteira #{{ tipo_carteira.id }}</h5>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tr>
                            <th>ID</th>
                            <td>{{ tipo_carteira.id }}</td>
                        </tr>
                        <tr>
                            <th>Tipo</th>
                            <td>{{ tipo_carteira.tipo }}</td>
                        </tr>
                    </table>
                </div>
                <div class="card-footer">
                    <a href="{{ path('app_tipo_carteira_edit', {'id': tipo_carteira.id}) }}" class="btn btn-warning"><i class="fas fa-edit"></i> Editar</a>
                    <a href="{{ path('app_tipo_carteira_index') }}" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Voltar</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
