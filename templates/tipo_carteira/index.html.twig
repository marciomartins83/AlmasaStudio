{% extends 'base.html.twig' %}

{% block title %}Tipos de Carteira - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Tipos', 'url': path('app_dashboard_tipos_index')}
        ],
        'current': 'Lista de Tipos de Carteira'
    } %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-credit-card"></i> Tipos de Carteira</h1>
                <a href="{{ path('app_tipo_carteira_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Novo Tipo
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th width="80">ID</th>
                                    <th>Tipo de Carteira</th>
                                    <th>Descrição</th>
                                    <th width="200">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for tipo_carteira in tipos_carteiras %}
                                <tr>
                                    <td>{{ tipo_carteira.id }}</td>
                                    <td><strong>{{ tipo_carteira.tipo }}</strong></td>
                                    <td>{{ tipo_carteira.descricao|default('Sem descrição') }}</td>
                                    <td>
                                        <div class="btn-group d-none d-md-flex" role="group">
                                            <a href="{{ path('app_tipo_carteira_show', {'id': tipo_carteira.id}) }}" 
                                               class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Ver
                                            </a>
                                            <a href="{{ path('app_tipo_carteira_edit', {'id': tipo_carteira.id}) }}" 
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <form method="post" 
                                                  action="{{ path('app_tipo_carteira_delete', {'id': tipo_carteira.id}) }}" 
                                                  style="display:inline-block"
                                                  onsubmit="return confirm('Tem certeza que deseja excluir este tipo de carteira?')">
                                                <input type="hidden" name="_token" 
                                                       value="{{ csrf_token('delete' ~ tipo_carteira.id) }}">
                                                <button class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i> Excluir
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="4" class="text-center text-muted py-4">
                                        <i class="fas fa-info-circle fa-2x mb-2 d-block"></i>
                                        <span>Nenhum tipo de carteira cadastrado</span><br>
                                        <small>Clique em "Novo Tipo" para começar</small>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
