{% extends 'base.html.twig' %}

{% block title %}Contas Bancárias - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Dashboard', 'url': path('app_dashboard')}
        ],
        'current': 'Lista de Contas Bancárias'
    } %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-wallet"></i> Contas Bancárias</h1>
                <a href="{{ path('app_conta_bancaria_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nova Conta Bancária
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th width="80">ID</th>
                                    <th>Código</th>
                                    <th>Titular</th>
                                    <th width="100">Principal</th>
                                    <th width="100">Status</th>
                                    <th width="200">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for conta in conta_bancarias %}
                                <tr>
                                    <td>{{ conta.id }}</td>
                                    <td>
                                        <strong>{{ conta.codigo }}</strong>
                                        {% if conta.digitoConta %}
                                            <small class="text-muted">-{{ conta.digitoConta }}</small>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if conta.titular %}
                                            {{ conta.titular }}
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if conta.principal %}
                                            <span class="badge bg-warning">Principal</span>
                                        {% else %}
                                            <span class="badge bg-secondary">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if conta.ativo %}
                                            <span class="badge bg-success">Ativo</span>
                                        {% else %}
                                            <span class="badge bg-danger">Inativo</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group-vertical btn-group-sm d-md-none" role="group">
                                            <a href="{{ path('app_conta_bancaria_show', {'id': conta.id}) }}" 
                                               class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Ver
                                            </a>
                                            <a href="{{ path('app_conta_bancaria_edit', {'id': conta.id}) }}" 
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                        </div>
                                        <div class="btn-group d-none d-md-flex" role="group">
                                            <a href="{{ path('app_conta_bancaria_show', {'id': conta.id}) }}" 
                                               class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Ver
                                            </a>
                                            <a href="{{ path('app_conta_bancaria_edit', {'id': conta.id}) }}" 
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <form method="post" 
                                                  action="{{ path('app_conta_bancaria_delete', {'id': conta.id}) }}" 
                                                  style="display:inline-block"
                                                  onsubmit="return confirm('Tem certeza que deseja excluir esta conta bancária?')">
                                                <input type="hidden" name="_token" 
                                                       value="{{ csrf_token('delete' ~ conta.id) }}">
                                                <button class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i> Excluir
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="6" class="text-center text-muted py-4">
                                        <i class="fas fa-info-circle fa-2x mb-2 d-block"></i>
                                        <span>Nenhuma conta bancária cadastrada</span><br>
                                        <small>Clique em "Nova Conta Bancária" para começar</small>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}