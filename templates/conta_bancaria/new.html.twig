{% extends 'base.html.twig' %}

{% block title %}Nova Conta Bancária - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Lista de Contas Bancárias', 'url': path('app_conta_bancaria_index')}
        ],
        'current': 'Nova Conta Bancária'
    } %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-plus"></i> Nova Conta Bancária</h1>
                <a href="{{ path('app_conta_bancaria_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.codigo) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.digitoConta) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.titular) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.idPessoa) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.idBanco) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.idAgencia) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.idTipoConta) }}
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-12">{{ form_row(form.principal) }}</div>
                                    <div class="col-12">{{ form_row(form.ativo) }}</div>
                                    <div class="col-12">{{ form_row(form.registrada) }}</div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mt-3">
                            <div class="col-12">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save"></i> Salvar Conta Bancária
                                </button>
                                <a href="{{ path('app_conta_bancaria_index') }}" class="btn btn-secondary ms-2">
                                    <i class="fas fa-times"></i> Cancelar
                                </a>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}