{% extends 'base.html.twig' %}

{% block title %}{{ cidade.nome }} - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Endereços', 'url': path('app_enderecos')},
            {'label': 'Lista de Cidades', 'url': path('app_cidade_index')}
        ],
        'current': 'Ver Cidade'
    } %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-city"></i> {{ cidade.nome }}
                    {% if estado %}
                        <small class="text-muted">({{ estado.nome }} - {{ estado.uf }})</small>
                    {% endif %}
                </h1>
                <div>
                    <a href="{{ path('app_cidade_edit', {'id': cidade.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar Cidade
                    </a>
                    <a href="{{ path('app_cidade_index') }}" class="btn btn-secondary ms-2">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="150">ID:</th>
                                    <td>{{ cidade.id }}</td>
                                </tr>
                                <tr>
                                    <th>Nome:</th>
                                    <td><strong>{{ cidade.nome }}</strong></td>
                                </tr>
                                <tr>
                                    <th>Estado:</th>
                                    <td>
                                        {% if estado %}
                                            <span class="badge bg-primary fs-6">{{ estado.uf }}</span>
                                            <span class="ms-2">{{ estado.nome }}</span>
                                        {% else %}
                                            <span class="text-muted">Estado não encontrado</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Código:</th>
                                    <td>
                                        {% if cidade.codigo %}
                                            <span class="badge bg-secondary fs-6">{{ cidade.codigo }}</span>
                                        {% else %}
                                            <span class="text-muted">Não informado</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}