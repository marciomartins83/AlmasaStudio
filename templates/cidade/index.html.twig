{% extends 'base.html.twig' %}

{% block title %}Cidades - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Endereços', 'url': path('app_dashboard_enderecos_index')}
        ],
        'current': 'Lista de Cidades'
    } %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-city"></i> Cidades</h1>
                <a href="{{ path('app_cidade_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nova Cidade
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th width="80">ID</th>
                                    <th>Nome</th>
                                    <th width="150">Estado</th>
                                    <th width="120">Código</th>
                                    <th width="200">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for cidade in cidades %}
                                <tr>
                                    <td>{{ cidade.id }}</td>
                                    <td><strong>{{ cidade.nome }}</strong></td>
                                    <td>
                                        {% if estados_map[cidade.idEstado] is defined %}
                                            <span class="badge bg-primary">{{ estados_map[cidade.idEstado].uf }}</span>
                                            <br><small class="text-muted">{{ estados_map[cidade.idEstado].nome }}</small>
                                        {% else %}
                                            <span class="text-muted">Estado não encontrado</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if cidade.codigo %}
                                            <span class="badge bg-secondary">{{ cidade.codigo }}</span>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group-vertical btn-group-sm d-md-none" role="group">
                                            <a href="{{ path('app_cidade_show', {'id': cidade.id}) }}" 
                                               class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Ver
                                            </a>
                                            <a href="{{ path('app_cidade_edit', {'id': cidade.id}) }}" 
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                        </div>
                                        <div class="btn-group d-none d-md-flex" role="group">
                                            <a href="{{ path('app_cidade_show', {'id': cidade.id}) }}" 
                                               class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Ver
                                            </a>
                                            <a href="{{ path('app_cidade_edit', {'id': cidade.id}) }}" 
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <form method="post" 
                                                  action="{{ path('app_cidade_delete', {'id': cidade.id}) }}" 
                                                  style="display:inline-block"
                                                  onsubmit="return confirm('Tem certeza que deseja excluir esta cidade?')">
                                                <input type="hidden" name="_token" 
                                                       value="{{ csrf_token('delete' ~ cidade.id) }}">
                                                <button class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i> Excluir
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        <i class="fas fa-info-circle fa-2x mb-2 d-block"></i>
                                        <span>Nenhuma cidade cadastrada</span><br>
                                        <small>Clique em "Nova Cidade" para começar</small>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}