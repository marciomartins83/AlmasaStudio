{% extends 'base.html.twig' %}

{% block title %}{{ tipo_remessa.tipo }} - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Tipos', 'url': path('app_dashboard_tipos_index')},
            {'label': 'Lista de Tipos de Remessa', 'url': path('app_tipo_remessa_index')}
        ],
        'current': 'Ver Tipo de Remessa'
    } %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-file-export"></i> {{ tipo_remessa.tipo }}</h1>
                <div>
                    <a href="{{ path('app_tipo_remessa_edit', {'id': tipo_remessa.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar Tipo
                    </a>
                    <a href="{{ path('app_tipo_remessa_index') }}" class="btn btn-secondary ms-2">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="150">ID:</th>
                                    <td>{{ tipo_remessa.id }}</td>
                                </tr>
                                <tr>
                                    <th>Tipo:</th>
                                    <td><strong>{{ tipo_remessa.tipo }}</strong></td>
                                </tr>
                                <tr>
                                    <th>Descrição:</th>
                                    <td>{{ tipo_remessa.descricao|default('Sem descrição') }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
