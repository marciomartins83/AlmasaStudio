{% extends 'base.html.twig' %}

{% block title %}{{ logradouro.logradouro }} - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Logradouros', 'url': path('app_logradouro_index')},
            {'label': 'Lista de Logradouros', 'url': path('app_logradouro_index')}
        ],
        'current': 'Ver Logradouro'
    } %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-road"></i> {{ logradouro.logradouro }}
                    {% if bairro %}
                        <small class="text-muted">({{ bairro.nome }})</small>
                    {% endif %}
                </h1>
                <div>
                    <a href="{{ path('app_logradouro_edit', {'id': logradouro.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar Logradouro
                    </a>
                    <a href="{{ path('app_logradouro_index') }}" class="btn btn-secondary ms-2">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="150">ID:</th>
                                    <td>{{ logradouro.id }}</td>
                                </tr>
                                <tr>
                                    <th>Logradouro:</th>
                                    <td><strong>{{ logradouro.logradouro }}</strong></td>
                                </tr>
                                <tr>
                                    <th>Bairro:</th>
                                    <td>
                                        {% if bairro %}
                                            <span class="badge bg-info fs-6">{{ bairro.nome }}</span>
                                        {% else %}
                                            <span class="text-muted">Bairro n√£o encontrado</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>CEP:</th>
                                    <td>
                                        <span class="badge bg-secondary fs-6">{{ logradouro.cep }}</span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
