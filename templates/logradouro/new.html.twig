{% extends 'base.html.twig' %}

{% block title %}Novo Logradouro - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Endere√ßos', 'url': path('app_enderecos')},
            {'label': 'Lista de Logradouros', 'url': path('app_logradouro_index')}
        ],
        'current': 'Novo Logradouro'
    } %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-plus"></i> Novo Logradouro</h1>
                <a href="{{ path('app_logradouro_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.logradouro) }}
{{ form_row(form.bairro) }}
                            </div>
                            <!-- Campo idBairro removido -->
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.cep) }}
                            </div>
                        </div>
                        
                        <div class="row mt-3">
                            <div class="col-12">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save"></i> Salvar Logradouro
                                </button>
                                <a href="{{ path('app_logradouro_index') }}" class="btn btn-secondary ms-2">
                                    <i class="fas fa-times"></i> Cancelar
                                </a>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
