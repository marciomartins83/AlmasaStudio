{% extends 'base.html.twig' %}

{% block title %}Cobranças Pendentes - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Dashboard', 'url': path('app_dashboard')},
            {'label': 'Financeiro', 'url': '#'}
        ],
        'current': 'Cobranças Pendentes'
    } %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-file-invoice-dollar"></i> Cobranças Pendentes</h1>
            </div>

            {# Filtros #}
            <div class="card mb-3">
                <div class="card-body">
                    <form method="GET" action="{{ path('app_cobranca_pendentes') }}" class="row g-3 align-items-end">
                        <div class="col-md-3">
                            <label for="data_vencimento" class="form-label">Data de Vencimento</label>
                            <input type="date"
                                   class="form-control"
                                   id="data_vencimento"
                                   name="data_vencimento"
                                   value="{{ dataVencimento|date('Y-m-d') }}">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Status</label>
                            <select class="form-select" name="status[]" multiple>
                                {% for key, label in statusOptions %}
                                    <option value="{{ key }}" {% if key in filtros.status|default([]) %}selected{% endif %}>
                                        {{ label }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-3">
                            <div class="form-check mt-4">
                                <input class="form-check-input"
                                       type="checkbox"
                                       id="mostrar_automaticos"
                                       name="mostrar_automaticos"
                                       value="1"
                                       {% if mostrarAutomaticos %}checked{% endif %}>
                                <label class="form-check-label" for="mostrar_automaticos">
                                    Mostrar envios automáticos
                                </label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> Filtrar
                            </button>
                            <a href="{{ path('app_cobranca_pendentes') }}" class="btn btn-secondary">
                                <i class="fas fa-eraser"></i> Limpar
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            {# Cards de Resumo #}
            <div class="row mb-3">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body text-center">
                            <h3 class="mb-0">{{ estatisticas.total|default(0) }}</h3>
                            <small>Total de Cobranças</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body text-center">
                            <h3 class="mb-0">R$ {{ estatisticas.valor_total|default(0)|number_format(2, ',', '.') }}</h3>
                            <small>Valor Total</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body text-center">
                            <h3 class="mb-0">{{ contagem_tipo_envio.automatico|default(0) }}</h3>
                            <small>Automáticos</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-dark">
                        <div class="card-body text-center">
                            <h3 class="mb-0">{{ contagem_tipo_envio.manual|default(0) }}</h3>
                            <small>Manuais</small>
                        </div>
                    </div>
                </div>
            </div>

            {# Ações em Lote #}
            <div class="mb-3">
                <button type="button" class="btn btn-success" id="btnEnviarSelecionados" disabled>
                    <i class="fas fa-paper-plane"></i> Enviar Selecionados (<span id="contadorSelecionados">0</span>)
                </button>
                <button type="button" class="btn btn-info" id="btnPreview" disabled>
                    <i class="fas fa-eye"></i> Preview
                </button>
            </div>

            {# Tabela de Cobranças #}
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th width="40">
                                        <input type="checkbox" class="form-check-input" id="checkAll">
                                    </th>
                                    <th width="80">Contrato</th>
                                    <th>Imóvel</th>
                                    <th>Locatário</th>
                                    <th width="100">Competência</th>
                                    <th width="100">Vencimento</th>
                                    <th width="120" class="text-end">Valor Total</th>
                                    <th width="100">Tipo</th>
                                    <th width="120">Status</th>
                                    <th width="150">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for cobranca in cobrancas %}
                                <tr data-id="{{ cobranca.id }}">
                                    <td>
                                        {% if cobranca.podeEnviarManualmente() %}
                                        <input type="checkbox"
                                               class="form-check-input cobranca-check"
                                               value="{{ cobranca.id }}"
                                               data-valor="{{ cobranca.valorTotalFloat }}">
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('app_imoveis_contratos_edit', {id: cobranca.contrato.id}) }}">
                                            #{{ cobranca.contrato.id }}
                                        </a>
                                    </td>
                                    <td>
                                        {% if cobranca.contrato.imovel %}
                                            {{ cobranca.contrato.imovel.codigoInterno|default('-') }}
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if cobranca.contrato.pessoaLocatario %}
                                            {{ cobranca.contrato.pessoaLocatario.nome }}
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ cobranca.competenciaFormatada }}</td>
                                    <td>{{ cobranca.dataVencimento|date('d/m/Y') }}</td>
                                    <td class="text-end">
                                        <strong>R$ {{ cobranca.valorTotalFloat|number_format(2, ',', '.') }}</strong>
                                    </td>
                                    <td>
                                        {% if cobranca.tipoEnvio == 'AUTOMATICO' %}
                                            <span class="badge bg-info">Automático</span>
                                        {% elseif cobranca.tipoEnvio == 'MANUAL' %}
                                            <span class="badge bg-warning text-dark">Manual</span>
                                        {% else %}
                                            <span class="badge bg-secondary">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge {{ cobranca.statusClass }}">
                                            {{ cobranca.statusLabel }}
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_cobranca_show', {id: cobranca.id}) }}"
                                               class="btn btn-info btn-sm"
                                               title="Ver Detalhes">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            {% if cobranca.podeEnviarManualmente() %}
                                            <button type="button"
                                                    class="btn btn-success btn-sm btn-enviar"
                                                    data-id="{{ cobranca.id }}"
                                                    title="Enviar">
                                                <i class="fas fa-paper-plane"></i>
                                            </button>
                                            {% endif %}
                                            {% if cobranca.isPendente() %}
                                            <button type="button"
                                                    class="btn btn-danger btn-sm btn-cancelar"
                                                    data-id="{{ cobranca.id }}"
                                                    title="Cancelar">
                                                <i class="fas fa-times"></i>
                                            </button>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="10" class="text-center text-muted py-4">
                                        <i class="fas fa-info-circle fa-2x mb-2 d-block"></i>
                                        <span>Nenhuma cobrança encontrada</span><br>
                                        <small>Altere os filtros para ver mais resultados</small>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    {# Paginação #}
                    {% if totalPages > 1 %}
                    <nav aria-label="Paginação" class="mt-3">
                        <ul class="pagination justify-content-center">
                            <li class="page-item {% if page == 1 %}disabled{% endif %}">
                                <a class="page-link" href="{{ path('app_cobranca_pendentes', queryParams|merge({page: page - 1})) }}">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>
                            {% for p in 1..totalPages %}
                                {% if p == page or (p >= page - 2 and p <= page + 2) or p == 1 or p == totalPages %}
                                    <li class="page-item {% if p == page %}active{% endif %}">
                                        <a class="page-link" href="{{ path('app_cobranca_pendentes', queryParams|merge({page: p})) }}">
                                            {{ p }}
                                        </a>
                                    </li>
                                {% elseif p == page - 3 or p == page + 3 %}
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                {% endif %}
                            {% endfor %}
                            <li class="page-item {% if page == totalPages %}disabled{% endif %}">
                                <a class="page-link" href="{{ path('app_cobranca_pendentes', queryParams|merge({page: page + 1})) }}">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                    {% endif %}
                </div>
            </div>

            {% if cobrancas|length > 0 %}
            <div class="mt-2">
                <small class="text-muted">
                    Mostrando {{ cobrancas|length }} de {{ total }} cobrança(s)
                </small>
            </div>
            {% endif %}
        </div>
    </div>
</div>

{# Modal de Preview #}
<div class="modal fade" id="previewModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-eye"></i> Preview de Envio
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="previewContent">
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Carregando...</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-success" id="btnConfirmarEnvio">
                    <i class="fas fa-paper-plane"></i> Confirmar Envio
                </button>
            </div>
        </div>
    </div>
</div>

{# Modal de Resultado do Lote #}
<div class="modal fade" id="resultadoLoteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-check-circle"></i> Resultado do Envio
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="resultadoLoteContent">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="location.reload()">
                    <i class="fas fa-sync"></i> Atualizar Lista
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    window.COBRANCA_ROUTES = {
        enviar: '{{ path('app_cobranca_enviar', {id: '__ID__'}) }}',
        enviarLote: '{{ path('app_cobranca_enviar_lote') }}',
        cancelar: '{{ path('app_cobranca_cancelar', {id: '__ID__'}) }}',
        preview: '{{ path('app_cobranca_preview') }}'
    };
</script>
{{ encore_entry_script_tags('cobranca') }}
{% endblock %}
