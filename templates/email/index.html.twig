{% extends 'base.html.twig' %}

{% block title %}Emails - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Dashboard', 'url': path('app_dashboard')}
        ],
        'current': 'Lista de Emails'
    } %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-envelope"></i> Emails</h1>
                <a href="{{ path('app_email_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Novo Email
                </a>
            </div>

            {% include '_partials/search_panel.html.twig' with {
                filterDefs: pagination.filterDefs,
                filters: pagination.filters,
                routeName: 'app_email_index',
                itemsPerPage: pagination.itemsPerPage,
                sortField: pagination.sortField,
                sortDir: pagination.sortDir
            } %}

            {% include '_partials/sort_panel.html.twig' with {
                sortOptions: pagination.sortOptions,
                sortField: pagination.sortField,
                sortDir: pagination.sortDir,
                routeName: 'app_email_index',
                filters: pagination.filters,
                itemsPerPage: pagination.itemsPerPage
            } %}

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th width="80">ID</th>
                                    <th>Email</th>
                                    <th>Tipo de Email</th>
                                    <th>Descrição</th>
                                    <th width="200">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for email in pagination.items %}
                                <tr>
                                    <td>{{ email.id }}</td>
                                    <td><strong>{{ email.email }}</strong></td>
                                    <td>{{ email.tipo.tipo ?? '-' }}</td>
                                    <td>{{ email.descricao ?? '-' }}</td>
                                    <td>
                                        <div class="btn-group d-none d-md-flex" role="group">
                                            <a href="{{ path('app_email_edit', {'id': email.id}) }}"
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <form method="post"
                                                  action="{{ path('app_email_delete', {'id': email.id}) }}"
                                                  style="display:inline-block"
                                                  onsubmit="return confirm('Tem certeza que deseja excluir este email?')">
                                                <input type="hidden" name="_token"
                                                       value="{{ csrf_token('delete' ~ email.id) }}">
                                                <button class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i> Excluir
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        <i class="fas fa-info-circle fa-2x mb-2 d-block"></i>
                                        <span>Nenhum email cadastrado</span><br>
                                        <small>Clique em "Novo Email" para começar</small>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    {% include '_partials/pagination.html.twig' with {
                        totalItems: pagination.totalItems,
                        currentPage: pagination.currentPage,
                        itemsPerPage: pagination.itemsPerPage,
                        totalPages: pagination.totalPages,
                        search: pagination.search,
                        routeName: 'app_email_index',
                        filters: pagination.filters,
                        sortField: pagination.sortField,
                        sortDir: pagination.sortDir,
                        showSearch: false
                    } %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('crud_filters') }}
{% endblock %}
