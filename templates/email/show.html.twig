{% extends 'base.html.twig' %}

{% block title %}Detalhes do Email{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Detalhes do Email</h1>
        <div>
            <a href="{{ path('app_email_edit', {'id': email.id}) }}" class="btn btn-warning">Editar</a>
            <a href="{{ path('app_email_index') }}" class="btn btn-secondary">Voltar</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="card-title">Informações do Email</h5>
                    <table class="table table-borderless">
                        <tr>
                            <th>ID:</th>
                            <td>{{ email.id }}</td>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <td>{{ email.email }}</td>
                        </tr>
                        <tr>
                            <th>Tipo:</th>
                            <td>{{ email.tipo ? email.tipo.tipo : '-' }}</td>
                        </tr>
                        <tr>
                            <th>Descrição:</th>
                            <td>{{ email.descricao ?? '-' }}</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 