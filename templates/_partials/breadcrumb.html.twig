{# 
    Componente de Breadcrumb reutilizável
    Parâmetros:
    - items: array de itens do breadcrumb [{'label': 'Nome', 'url': 'path'}, ...]
    - current: string com o item atual (sem link)
#}

<div class="row mb-3">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <div class="bg-primary text-white p-2 rounded">
                <ol class="breadcrumb mb-0 bg-transparent">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_dashboard') }}" class="text-white text-decoration-none">
                            <i class="fas fa-home"></i> Início
                        </a>
                    </li>
                    {% if items is defined %}
                        {% for item in items %}
                            <li class="breadcrumb-item">
                                <a href="{{ item.url }}" class="text-white text-decoration-none">
                                    {{ item.label }}
                                </a>
                            </li>
                        {% endfor %}
                    {% endif %}
                    {% if current is defined %}
                        <li class="breadcrumb-item active text-white" aria-current="page">
                            {{ current }}
                        </li>
                    {% endif %}
                </ol>
            </div>
        </nav>
    </div>
</div>