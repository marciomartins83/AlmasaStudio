{# Painel reutilizavel de dados de pessoa #}
{# Aceita objeto Pessoas ou array de dados #}
{# Uso com objeto: {% include '_partials/pessoa_panel.html.twig' with {'pessoa': pessoaObj, 'papel': 'Inquilino', 'cor': 'success'} %} #}
{# Uso com array:  {% include '_partials/pessoa_panel.html.twig' with {'pessoa': arrayDados, 'papel': 'Inquilino', 'cor': 'success'} %} #}
{% if pessoa is not null %}
<div class="card mb-4 border-{{ cor|default('primary') }}">
    <div class="card-header bg-{{ cor|default('primary') }} text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-user"></i> {{ papel|default('Pessoa') }}: {{ pessoa.nome }}</h5>
        <div>
            <a href="{{ path('app_pessoa_show', {'id': pessoa.idpessoa}) }}" class="btn btn-sm btn-light" target="_blank">
                <i class="fas fa-eye"></i> Ver
            </a>
            <a href="{{ path('app_pessoa_edit', {'id': pessoa.idpessoa}) }}" class="btn btn-sm btn-warning" target="_blank">
                <i class="fas fa-edit"></i> Editar
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <table class="table table-sm table-borderless mb-0">
                    <tr>
                        <th style="width:45%">ID:</th>
                        <td>{{ pessoa.idpessoa }}</td>
                    </tr>
                    <tr>
                        <th>Nome:</th>
                        <td>{{ pessoa.nome }}</td>
                    </tr>
                    <tr>
                        <th>Tipo:</th>
                        <td>{{ pessoa.fisicaJuridica == 'F' ? 'Pessoa Fisica' : 'Pessoa Juridica' }}</td>
                    </tr>
                    <tr>
                        <th>Status:</th>
                        <td>
                            {% if pessoa.status %}
                                <span class="badge bg-success">Ativo</span>
                            {% else %}
                                <span class="badge bg-danger">Inativo</span>
                            {% endif %}
                        </td>
                    </tr>
                </table>
            </div>
            <div class="col-md-4">
                <table class="table table-sm table-borderless mb-0">
                    <tr>
                        <th style="width:45%">Nascimento:</th>
                        <td>{% if pessoa.dataNascimento %}{{ pessoa.dataNascimento|date('d/m/Y') }}{% else %}-{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Estado Civil:</th>
                        <td>{{ pessoa.estadoCivil ?? '-' }}</td>
                    </tr>
                    <tr>
                        <th>Nacionalidade:</th>
                        <td>{{ pessoa.nacionalidade ?? '-' }}</td>
                    </tr>
                    <tr>
                        <th>Naturalidade:</th>
                        <td>{{ pessoa.naturalidade ?? '-' }}</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-4">
                <table class="table table-sm table-borderless mb-0">
                    <tr>
                        <th style="width:45%">Nome do Pai:</th>
                        <td>{{ pessoa.nomePai ?? '-' }}</td>
                    </tr>
                    <tr>
                        <th>Nome da Mae:</th>
                        <td>{{ pessoa.nomeMae ?? '-' }}</td>
                    </tr>
                    <tr>
                        <th>Renda:</th>
                        <td>{% if pessoa.renda %}R$ {{ pessoa.renda|number_format(2, ',', '.') }}{% else %}-{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Cadastro:</th>
                        <td>{% if pessoa.dtCadastro %}{{ pessoa.dtCadastro|date('d/m/Y H:i') }}{% else %}-{% endif %}</td>
                    </tr>
                </table>
            </div>
        </div>
        {% if pessoa.observacoes %}
        <div class="row mt-2">
            <div class="col-12">
                <strong>Observacoes:</strong> {{ pessoa.observacoes }}
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endif %}
