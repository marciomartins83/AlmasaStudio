{% extends 'base.html.twig' %}

{% block title %}Imóveis - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Dashboard', 'url': path('app_dashboard')}
        ],
        'current': 'Lista de Imóveis'
    } %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-building"></i> Imóveis</h1>
                <a href="{{ path('app_imovel_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Novo Imóvel
                </a>
            </div>

            {% include '_partials/search_panel.html.twig' with {
                filterDefs: pagination.filterDefs,
                filters: pagination.filters,
                routeName: 'app_imovel_index',
                itemsPerPage: pagination.itemsPerPage,
                sortField: pagination.sortField,
                sortDir: pagination.sortDir
            } %}

            {% include '_partials/sort_panel.html.twig' with {
                sortOptions: pagination.sortOptions,
                sortField: pagination.sortField,
                sortDir: pagination.sortDir,
                routeName: 'app_imovel_index',
                filters: pagination.filters,
                itemsPerPage: pagination.itemsPerPage
            } %}

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th width="100">Código</th>
                                    <th>Tipo</th>
                                    <th>Endereço</th>
                                    <th>Proprietário</th>
                                    <th width="100">Situação</th>
                                    <th width="120" class="text-end">Aluguel</th>
                                    <th width="120" class="text-end">Venda</th>
                                    <th width="80" class="text-center">Quartos</th>
                                    <th width="80" class="text-center">Área</th>
                                    <th width="100">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for imovel in pagination.items %}
                                <tr>
                                    <td>
                                        <strong>{{ imovel.codigoInterno|default('-') }}</strong>
                                    </td>
                                    <td>{{ imovel.tipoImovel.descricao|default('-') }}</td>
                                    <td>
                                        {% if imovel.endereco and imovel.endereco.logradouro %}
                                            {{ imovel.endereco.logradouro.logradouro|default('-') }}{% if imovel.endereco.endNumero %}, {{ imovel.endereco.endNumero }}{% endif %}
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if imovel.pessoaProprietario %}
                                            {{ imovel.pessoaProprietario.nome }}
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if imovel.situacao == 'disponivel' %}
                                            <span class="badge bg-success">Disponível</span>
                                        {% elseif imovel.situacao == 'alugado' %}
                                            <span class="badge bg-primary">Alugado</span>
                                        {% elseif imovel.situacao == 'vendido' %}
                                            <span class="badge bg-info">Vendido</span>
                                        {% elseif imovel.situacao == 'reservado' %}
                                            <span class="badge bg-warning">Reservado</span>
                                        {% elseif imovel.situacao == 'em_reforma' %}
                                            <span class="badge bg-secondary">Em Reforma</span>
                                        {% else %}
                                            <span class="badge bg-secondary">{{ imovel.situacao|default('-')|capitalize }}</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        {% if imovel.valorAluguel %}
                                            R$ {{ imovel.valorAluguel|number_format(2, ',', '.') }}
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        {% if imovel.valorVenda %}
                                            R$ {{ imovel.valorVenda|number_format(2, ',', '.') }}
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">{{ imovel.qtdQuartos }}</td>
                                    <td class="text-center">
                                        {% if imovel.areaTotal %}
                                            {{ imovel.areaTotal|number_format(0, ',', '.') }} m²
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_imovel_edit', {id: imovel.id}) }}"
                                               class="btn btn-warning btn-sm"
                                               title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="10" class="text-center text-muted py-4">
                                        <i class="fas fa-info-circle fa-2x mb-2 d-block"></i>
                                        <span>Nenhum imóvel cadastrado</span><br>
                                        <small>Clique em "Novo Imóvel" para começar</small>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="card mt-2">
                <div class="card-body py-2">
                    {% include '_partials/pagination.html.twig' with {
                        totalItems: pagination.totalItems,
                        currentPage: pagination.currentPage,
                        itemsPerPage: pagination.itemsPerPage,
                        totalPages: pagination.totalPages,
                        search: pagination.search,
                        routeName: 'app_imovel_index',
                        filters: pagination.filters,
                        sortField: pagination.sortField,
                        sortDir: pagination.sortDir,
                        showSearch: false
                    } %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('crud_filters') }}
{% endblock %}
