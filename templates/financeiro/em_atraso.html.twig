{% extends 'base.html.twig' %}

{% block title %}Lançamentos em Atraso - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Dashboard', 'url': path('app_dashboard')},
            {'label': 'Ficha Financeira', 'url': path('app_financeiro_index')}
        ],
        'current': 'Em Atraso'
    } %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1><i class="fas fa-exclamation-triangle text-danger"></i> Lançamentos em Atraso</h1>
        <a href="{{ path('app_financeiro_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
    </div>

    {# Resumo #}
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <h6 class="mb-0">Total em Atraso</h6>
                    <h2 class="mb-0">{{ lancamentos|length }}</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center">
                    <h6 class="mb-0">Valor Total</h6>
                    {% set valorTotal = 0 %}
                    {% for l in lancamentos %}
                        {% set valorTotal = valorTotal + l.valorSaldo %}
                    {% endfor %}
                    <h2 class="mb-0">R$ {{ valorTotal|number_format(2, ',', '.') }}</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-secondary text-white">
                <div class="card-body text-center">
                    <h6 class="mb-0">Inquilinos Inadimplentes</h6>
                    {% set inquilinos = [] %}
                    {% for l in lancamentos %}
                        {% if l.inquilino and l.inquilino.id not in inquilinos %}
                            {% set inquilinos = inquilinos|merge([l.inquilino.id]) %}
                        {% endif %}
                    {% endfor %}
                    <h2 class="mb-0">{{ inquilinos|length }}</h2>
                </div>
            </div>
        </div>
    </div>

    {# Tabela de lançamentos em atraso #}
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0"><i class="fas fa-list"></i> Detalhamento</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th width="60">ID</th>
                            <th>Inquilino</th>
                            <th>Imóvel</th>
                            <th width="80">Comp.</th>
                            <th width="100">Vencimento</th>
                            <th width="80" class="text-center">Dias</th>
                            <th width="120" class="text-end">Valor</th>
                            <th width="120" class="text-end">Saldo</th>
                            <th width="150">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for lancamento in lancamentos %}
                        <tr>
                            <td><strong>{{ lancamento.id }}</strong></td>
                            <td>
                                {% if lancamento.inquilino %}
                                    <a href="{{ path('app_financeiro_ficha', {inquilinoId: lancamento.inquilino.id}) }}">
                                        {{ lancamento.inquilino.nome }}
                                    </a>
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td>{{ lancamento.imovel.codigoInterno|default('-') }}</td>
                            <td>{{ lancamento.competenciaFormatada }}</td>
                            <td>{{ lancamento.dataVencimentoFormatada }}</td>
                            <td class="text-center">
                                <span class="badge {% if lancamento.diasAtraso > 30 %}bg-danger{% elseif lancamento.diasAtraso > 15 %}bg-warning{% else %}bg-secondary{% endif %}">
                                    {{ lancamento.diasAtraso }} dias
                                </span>
                            </td>
                            <td class="text-end">{{ lancamento.valorTotalFormatado }}</td>
                            <td class="text-end">
                                <strong class="text-danger">{{ lancamento.valorSaldoFormatado }}</strong>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_financeiro_lancamento_show', {id: lancamento.id}) }}"
                                       class="btn btn-info btn-sm"
                                       title="Visualizar">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <button type="button"
                                            class="btn btn-success btn-sm btn-baixa"
                                            data-id="{{ lancamento.id }}"
                                            data-saldo="{{ lancamento.valorSaldo }}"
                                            title="Registrar Pagamento">
                                        <i class="fas fa-money-bill"></i>
                                    </button>
                                    <a href="{{ path('app_financeiro_lancamento_edit', {id: lancamento.id}) }}"
                                       class="btn btn-warning btn-sm"
                                       title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="9" class="text-center text-muted py-4">
                                <i class="fas fa-check-circle fa-3x text-success mb-3 d-block"></i>
                                <span class="fs-5">Nenhum lançamento em atraso!</span><br>
                                <small>Todos os pagamentos estão em dia</small>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                    {% if lancamentos|length > 0 %}
                    <tfoot class="table-secondary">
                        <tr>
                            <td colspan="6" class="text-end"><strong>TOTAL:</strong></td>
                            <td class="text-end">
                                {% set valorTotalGeral = 0 %}
                                {% for l in lancamentos %}
                                    {% set valorTotalGeral = valorTotalGeral + l.valorTotal %}
                                {% endfor %}
                                <strong>R$ {{ valorTotalGeral|number_format(2, ',', '.') }}</strong>
                            </td>
                            <td class="text-end">
                                <strong class="text-danger">R$ {{ valorTotal|number_format(2, ',', '.') }}</strong>
                            </td>
                            <td></td>
                        </tr>
                    </tfoot>
                    {% endif %}
                </table>
            </div>
        </div>
    </div>

    {% if lancamentos|length > 0 %}
    <div class="mt-2">
        <small class="text-muted">Total: {{ lancamentos|length }} lançamento(s) em atraso</small>
    </div>
    {% endif %}
</div>

{# Modal para Baixa #}
<div class="modal fade" id="modalBaixa" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-money-bill"></i> Registrar Pagamento</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="baixaLancamentoId">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Data do Pagamento</label>
                        <input type="date" id="baixaData" class="form-control" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Valor Pago</label>
                        <input type="text" id="baixaValor" class="form-control" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Forma de Pagamento</label>
                        <select id="baixaFormaPagamento" class="form-select">
                            <option value="boleto">Boleto</option>
                            <option value="pix">PIX</option>
                            <option value="transferencia">Transferência</option>
                            <option value="dinheiro">Dinheiro</option>
                            <option value="cheque">Cheque</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Nº Documento</label>
                        <input type="text" id="baixaNumeroDocumento" class="form-control">
                    </div>
                    <div class="col-12">
                        <label class="form-label">Observações</label>
                        <textarea id="baixaObservacoes" class="form-control" rows="2"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success" id="btnConfirmarBaixa">
                    <i class="fas fa-check"></i> Confirmar
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    window.ROUTES = {
        realizarBaixa: '{{ path('app_financeiro_baixa', {id: '__ID__'}) }}'
    };
</script>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('financeiro') }}
{% endblock %}
