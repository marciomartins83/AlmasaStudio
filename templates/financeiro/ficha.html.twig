{% extends 'base.html.twig' %}

{% block title %}Ficha Financeira - {{ dados.inquilino.nome|default('Inquilino') }} - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Dashboard', 'url': path('app_dashboard')},
            {'label': 'Ficha Financeira', 'url': path('app_financeiro_index')}
        ],
        'current': dados.inquilino.nome|default('Inquilino')
    } %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {# Cabeçalho do Inquilino #}
    <div class="card mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h2 class="mb-1">
                        <i class="fas fa-user"></i>
                        {{ dados.inquilino.nome|default('Inquilino não encontrado') }}
                    </h2>
                    <p class="text-muted mb-0">ID: {{ dados.inquilino.id|default('-') }}</p>
                </div>
                <div class="col-md-4 text-end">
                    <a href="{{ path('app_financeiro_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </div>
        </div>
    </div>

    {# Cards de totais #}
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h6 class="mb-0">Total Lançamentos</h6>
                    <h2 class="mb-0">{{ dados.totais.total_lancamentos|default(0) }}</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h6 class="mb-0">Pagos</h6>
                    <h2 class="mb-0">{{ dados.totais.pagos|default(0) }}</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <h6 class="mb-0">Em Atraso</h6>
                    <h2 class="mb-0">{{ dados.totais.em_atraso|default(0) }}</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center">
                    <h6 class="mb-0">Saldo Devedor</h6>
                    <h2 class="mb-0">R$ {{ dados.totais.valor_saldo|default(0)|number_format(2, ',', '.') }}</h2>
                </div>
            </div>
        </div>
    </div>

    {# Filtro por ano #}
    <div class="card mb-3">
        <div class="card-body">
            <form method="GET" class="row g-3 align-items-center">
                <div class="col-auto">
                    <label class="form-label mb-0">Filtrar por ano:</label>
                </div>
                <div class="col-auto">
                    <select name="ano" class="form-select" onchange="this.form.submit()">
                        <option value="">Todos os anos</option>
                        {% for y in range("now"|date("Y"), "now"|date("Y") - 5) %}
                            <option value="{{ y }}" {% if ano == y %}selected{% endif %}>{{ y }}</option>
                        {% endfor %}
                    </select>
                </div>
            </form>
        </div>
    </div>

    {# Tabela de lançamentos #}
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-list"></i> Histórico de Lançamentos</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th width="60">ID</th>
                            <th>Descrição</th>
                            <th>Imóvel</th>
                            <th width="80">Comp.</th>
                            <th width="100">Vencimento</th>
                            <th width="120" class="text-end">Valor</th>
                            <th width="120" class="text-end">Pago</th>
                            <th width="120" class="text-end">Saldo</th>
                            <th width="80">Status</th>
                            <th width="100">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for lancamento in dados.lancamentos %}
                        <tr class="{% if lancamento.emAtraso %}table-danger{% endif %}">
                            <td><strong>{{ lancamento.id }}</strong></td>
                            <td>{{ lancamento.descricao|default(lancamento.tipoLancamento|capitalize) }}</td>
                            <td>{{ lancamento.imovel.codigoInterno|default('-') }}</td>
                            <td>{{ lancamento.competenciaFormatada }}</td>
                            <td>
                                {{ lancamento.dataVencimentoFormatada }}
                                {% if lancamento.emAtraso %}
                                    <br><small class="text-danger">{{ lancamento.diasAtraso }} dias</small>
                                {% endif %}
                            </td>
                            <td class="text-end">{{ lancamento.valorTotalFormatado }}</td>
                            <td class="text-end">{{ lancamento.valorPagoFormatado }}</td>
                            <td class="text-end">
                                <strong class="{% if lancamento.isPago %}text-success{% else %}text-danger{% endif %}">
                                    {{ lancamento.valorSaldoFormatado }}
                                </strong>
                            </td>
                            <td>
                                {% if lancamento.situacao == 'pago' %}
                                    <span class="badge bg-success">Pago</span>
                                {% elseif lancamento.situacao == 'parcial' %}
                                    <span class="badge bg-warning">Parcial</span>
                                {% elseif lancamento.emAtraso %}
                                    <span class="badge bg-danger">Em Atraso</span>
                                {% else %}
                                    <span class="badge bg-secondary">Aberto</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_financeiro_lancamento_show', {id: lancamento.id}) }}"
                                       class="btn btn-info btn-sm"
                                       title="Visualizar">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    {% if not lancamento.isPago %}
                                    <button type="button"
                                            class="btn btn-success btn-sm btn-baixa"
                                            data-id="{{ lancamento.id }}"
                                            data-saldo="{{ lancamento.valorSaldo }}"
                                            title="Baixar">
                                        <i class="fas fa-money-bill"></i>
                                    </button>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="10" class="text-center text-muted py-4">
                                <i class="fas fa-info-circle fa-2x mb-2 d-block"></i>
                                <span>Nenhum lançamento encontrado</span>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                    {% if dados.lancamentos|length > 0 %}
                    <tfoot class="table-secondary">
                        <tr>
                            <td colspan="5" class="text-end"><strong>TOTAL:</strong></td>
                            <td class="text-end"><strong>R$ {{ dados.totais.valor_total|default(0)|number_format(2, ',', '.') }}</strong></td>
                            <td class="text-end"><strong>R$ {{ dados.totais.valor_pago|default(0)|number_format(2, ',', '.') }}</strong></td>
                            <td class="text-end"><strong class="text-danger">R$ {{ dados.totais.valor_saldo|default(0)|number_format(2, ',', '.') }}</strong></td>
                            <td colspan="2"></td>
                        </tr>
                    </tfoot>
                    {% endif %}
                </table>
            </div>
        </div>
    </div>
</div>

{# Modal para Baixa #}
<div class="modal fade" id="modalBaixa" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-money-bill"></i> Registrar Pagamento</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="baixaLancamentoId">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Data do Pagamento</label>
                        <input type="date" id="baixaData" class="form-control" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Valor Pago</label>
                        <input type="text" id="baixaValor" class="form-control" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Forma de Pagamento</label>
                        <select id="baixaFormaPagamento" class="form-select">
                            <option value="boleto">Boleto</option>
                            <option value="pix">PIX</option>
                            <option value="transferencia">Transferência</option>
                            <option value="dinheiro">Dinheiro</option>
                            <option value="cheque">Cheque</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Nº Documento</label>
                        <input type="text" id="baixaNumeroDocumento" class="form-control">
                    </div>
                    <div class="col-12">
                        <label class="form-label">Observações</label>
                        <textarea id="baixaObservacoes" class="form-control" rows="2"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success" id="btnConfirmarBaixa">
                    <i class="fas fa-check"></i> Confirmar
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    window.ROUTES = {
        realizarBaixa: '{{ path('app_financeiro_baixa', {id: '__ID__'}) }}'
    };
</script>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('financeiro') }}
{% endblock %}
