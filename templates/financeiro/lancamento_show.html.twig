{% extends 'base.html.twig' %}

{% block title %}Lançamento #{{ lancamento.id }} - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Dashboard', 'url': path('app_dashboard')},
            {'label': 'Ficha Financeira', 'url': path('app_financeiro_index')}
        ],
        'current': 'Lançamento #' ~ lancamento.id
    } %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-lg-8">
            {# Detalhes do Lançamento #}
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-file-invoice-dollar"></i>
                        Lançamento #{{ lancamento.id }}
                    </h4>
                    <div>
                        {% if lancamento.situacao == 'pago' %}
                            <span class="badge bg-success fs-6">Pago</span>
                        {% elseif lancamento.situacao == 'parcial' %}
                            <span class="badge bg-warning fs-6">Parcialmente Pago</span>
                        {% elseif lancamento.emAtraso %}
                            <span class="badge bg-danger fs-6">Em Atraso ({{ lancamento.diasAtraso }} dias)</span>
                        {% else %}
                            <span class="badge bg-secondary fs-6">Em Aberto</span>
                        {% endif %}
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="40%">Inquilino:</th>
                                    <td>{{ lancamento.inquilino.nome|default('-') }}</td>
                                </tr>
                                <tr>
                                    <th>Imóvel:</th>
                                    <td>{{ lancamento.imovel.codigoInterno|default('-') }}</td>
                                </tr>
                                <tr>
                                    <th>Competência:</th>
                                    <td>{{ lancamento.competenciaFormatada }}</td>
                                </tr>
                                <tr>
                                    <th>Vencimento:</th>
                                    <td>{{ lancamento.dataVencimentoFormatada }}</td>
                                </tr>
                                <tr>
                                    <th>Tipo:</th>
                                    <td><span class="badge bg-secondary">{{ lancamento.tipoLancamento|capitalize }}</span></td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="40%">Valor Principal:</th>
                                    <td class="text-end">R$ {{ lancamento.valorPrincipal|number_format(2, ',', '.') }}</td>
                                </tr>
                                {% if lancamento.valorCondominio|default(0) > 0 %}
                                <tr>
                                    <th>Condomínio:</th>
                                    <td class="text-end">R$ {{ lancamento.valorCondominio|number_format(2, ',', '.') }}</td>
                                </tr>
                                {% endif %}
                                {% if lancamento.valorIptu|default(0) > 0 %}
                                <tr>
                                    <th>IPTU:</th>
                                    <td class="text-end">R$ {{ lancamento.valorIptu|number_format(2, ',', '.') }}</td>
                                </tr>
                                {% endif %}
                                {% if lancamento.valorAgua|default(0) > 0 %}
                                <tr>
                                    <th>Água:</th>
                                    <td class="text-end">R$ {{ lancamento.valorAgua|number_format(2, ',', '.') }}</td>
                                </tr>
                                {% endif %}
                                {% if lancamento.valorLuz|default(0) > 0 %}
                                <tr>
                                    <th>Luz:</th>
                                    <td class="text-end">R$ {{ lancamento.valorLuz|number_format(2, ',', '.') }}</td>
                                </tr>
                                {% endif %}
                                {% if lancamento.valorGas|default(0) > 0 %}
                                <tr>
                                    <th>Gás:</th>
                                    <td class="text-end">R$ {{ lancamento.valorGas|number_format(2, ',', '.') }}</td>
                                </tr>
                                {% endif %}
                                {% if lancamento.valorOutros|default(0) > 0 %}
                                <tr>
                                    <th>Outros:</th>
                                    <td class="text-end">R$ {{ lancamento.valorOutros|number_format(2, ',', '.') }}</td>
                                </tr>
                                {% endif %}
                                {% if lancamento.valorDesconto|default(0) > 0 %}
                                <tr class="text-success">
                                    <th>Desconto:</th>
                                    <td class="text-end">- R$ {{ lancamento.valorDesconto|number_format(2, ',', '.') }}</td>
                                </tr>
                                {% endif %}
                                <tr class="table-dark">
                                    <th>TOTAL:</th>
                                    <td class="text-end"><strong>{{ lancamento.valorTotalFormatado }}</strong></td>
                                </tr>
                                <tr class="table-success">
                                    <th>Pago:</th>
                                    <td class="text-end">{{ lancamento.valorPagoFormatado }}</td>
                                </tr>
                                <tr class="{% if lancamento.isPago %}table-success{% else %}table-warning{% endif %}">
                                    <th>Saldo:</th>
                                    <td class="text-end"><strong>{{ lancamento.valorSaldoFormatado }}</strong></td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    {% if lancamento.descricao %}
                    <hr>
                    <div class="mb-3">
                        <strong>Descrição:</strong>
                        <p class="mb-0">{{ lancamento.descricao }}</p>
                    </div>
                    {% endif %}
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a href="{{ path('app_financeiro_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                    <div>
                        {% if not lancamento.isPago %}
                        <button type="button"
                                class="btn btn-success btn-baixa"
                                data-id="{{ lancamento.id }}"
                                data-saldo="{{ lancamento.valorSaldo }}">
                            <i class="fas fa-money-bill"></i> Registrar Pagamento
                        </button>
                        <a href="{{ path('app_financeiro_lancamento_edit', {id: lancamento.id}) }}"
                           class="btn btn-warning">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        {% endif %}
                    </div>
                </div>
            </div>

            {# Histórico de Baixas #}
            {% if lancamento.baixas|length > 0 %}
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-history"></i> Histórico de Pagamentos</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Data</th>
                                    <th>Valor</th>
                                    <th>Forma</th>
                                    <th>Documento</th>
                                    <th>Status</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for baixa in lancamento.baixas %}
                                <tr class="{% if baixa.estornada %}table-danger{% endif %}">
                                    <td>{{ baixa.dataPagamentoFormatada }}</td>
                                    <td>{{ baixa.valorTotalPagoFormatado }}</td>
                                    <td>{{ baixa.formaPagamentoLabel }}</td>
                                    <td>{{ baixa.numeroDocumento|default('-') }}</td>
                                    <td>
                                        {% if baixa.estornada %}
                                            <span class="badge bg-danger">Estornada</span>
                                        {% else %}
                                            <span class="badge bg-success">Confirmada</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if not baixa.estornada %}
                                        <button type="button"
                                                class="btn btn-danger btn-sm btn-estornar"
                                                data-id="{{ baixa.id }}"
                                                title="Estornar">
                                            <i class="fas fa-undo"></i>
                                        </button>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>

        {# Sidebar - Ações Rápidas #}
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-bolt"></i> Ações Rápidas</h5>
                </div>
                <div class="card-body">
                    {% if lancamento.inquilino %}
                    <a href="{{ path('app_financeiro_ficha', {inquilinoId: lancamento.inquilino.id}) }}"
                       class="btn btn-outline-primary w-100 mb-2">
                        <i class="fas fa-user"></i> Ver Ficha do Inquilino
                    </a>
                    {% endif %}
                    {% if not lancamento.isPago %}
                    <button type="button"
                            class="btn btn-outline-danger w-100 btn-cancelar"
                            data-id="{{ lancamento.id }}">
                        <i class="fas fa-times"></i> Cancelar Lançamento
                    </button>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

{# Modal para Baixa #}
<div class="modal fade" id="modalBaixa" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-money-bill"></i> Registrar Pagamento</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="baixaLancamentoId">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Data do Pagamento</label>
                        <input type="date" id="baixaData" class="form-control" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Valor Pago</label>
                        <input type="text" id="baixaValor" class="form-control" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Forma de Pagamento</label>
                        <select id="baixaFormaPagamento" class="form-select">
                            <option value="boleto">Boleto</option>
                            <option value="pix">PIX</option>
                            <option value="transferencia">Transferência</option>
                            <option value="dinheiro">Dinheiro</option>
                            <option value="cheque">Cheque</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Nº Documento</label>
                        <input type="text" id="baixaNumeroDocumento" class="form-control">
                    </div>
                    <div class="col-12">
                        <label class="form-label">Observações</label>
                        <textarea id="baixaObservacoes" class="form-control" rows="2"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success" id="btnConfirmarBaixa">
                    <i class="fas fa-check"></i> Confirmar
                </button>
            </div>
        </div>
    </div>
</div>

{# Modal para Estorno #}
<div class="modal fade" id="modalEstorno" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-undo"></i> Estornar Pagamento</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="estornoBaixaId">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    Tem certeza que deseja estornar este pagamento?
                </div>
                <div class="mb-3">
                    <label class="form-label">Motivo do Estorno</label>
                    <textarea id="estornoMotivo" class="form-control" rows="3" required
                              placeholder="Descreva o motivo do estorno..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="btnConfirmarEstorno">
                    <i class="fas fa-undo"></i> Confirmar Estorno
                </button>
            </div>
        </div>
    </div>
</div>

{# Modal para Cancelamento #}
<div class="modal fade" id="modalCancelar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-times"></i> Cancelar Lançamento</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="cancelarLancamentoId">
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle"></i>
                    Tem certeza que deseja cancelar este lançamento?
                </div>
                <div class="mb-3">
                    <label class="form-label">Motivo do Cancelamento</label>
                    <textarea id="cancelarMotivo" class="form-control" rows="3" required
                              placeholder="Descreva o motivo do cancelamento..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Voltar</button>
                <button type="button" class="btn btn-danger" id="btnConfirmarCancelar">
                    <i class="fas fa-times"></i> Confirmar Cancelamento
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    window.ROUTES = {
        realizarBaixa: '{{ path('app_financeiro_baixa', {id: '__ID__'}) }}',
        estornarBaixa: '{{ path('app_financeiro_estornar', {id: '__ID__'}) }}',
        cancelarLancamento: '{{ path('app_financeiro_cancelar', {id: '__ID__'}) }}'
    };
</script>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('financeiro') }}
{% endblock %}
