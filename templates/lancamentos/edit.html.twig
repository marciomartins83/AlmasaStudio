{% extends 'base.html.twig' %}

{% block title %}Editar Lancamento #{{ lancamento.numero }} - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Dashboard', 'url': path('app_dashboard')},
            {'label': 'Lancamentos', 'url': path('app_lancamentos_index')}
        ],
        'current': 'Editar Lancamento #' ~ lancamento.numero
    } %}

    {# Flash messages #}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {# Info do lancamento #}
    <div class="alert alert-info mb-3">
        <div class="row">
            <div class="col-md-3">
                <strong>Numero:</strong> {{ lancamento.numero }}
            </div>
            <div class="col-md-3">
                <strong>Status:</strong>
                <span class="badge bg-{{ lancamento.statusBadgeClass }}">{{ lancamento.statusLabel }}</span>
            </div>
            <div class="col-md-3">
                <strong>Valor:</strong> R$ {{ lancamento.valorFloat|number_format(2, ',', '.') }}
            </div>
            <div class="col-md-3">
                <strong>Saldo:</strong>
                <span class="{{ lancamento.saldo > 0 ? 'text-danger' : 'text-success' }}">
                    R$ {{ lancamento.saldo|number_format(2, ',', '.') }}
                </span>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <i class="fas fa-edit"></i> Editar Lancamento
        </div>
        <div class="card-body">
            {{ include('lancamentos/_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{{ encore_entry_script_tags('lancamentos') }}
{% endblock %}
