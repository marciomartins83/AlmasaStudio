{% extends 'base.html.twig' %}

{% block title %}Lancamentos - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Dashboard', 'url': path('app_dashboard')}
        ],
        'current': 'Lancamentos'
    } %}

    {# Flash messages #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {# Cards de Estatisticas #}
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-success">A Receber</h6>
                    <h4 class="card-title mb-0">R$ {{ estatisticas.receber.saldo|number_format(2, ',', '.') }}</h4>
                    <small class="text-muted">{{ estatisticas.receber.quantidade }} lancamento(s)</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-danger">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-danger">A Pagar</h6>
                    <h4 class="card-title mb-0">R$ {{ estatisticas.pagar.saldo|number_format(2, ',', '.') }}</h4>
                    <small class="text-muted">{{ estatisticas.pagar.quantidade }} lancamento(s)</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-warning">Vencidos (Receber)</h6>
                    <h4 class="card-title mb-0">R$ {{ estatisticas.vencidos.receber.saldo|number_format(2, ',', '.') }}</h4>
                    <small class="text-muted">{{ estatisticas.vencidos.receber.quantidade }} lancamento(s)</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-secondary">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-secondary">Vencidos (Pagar)</h6>
                    <h4 class="card-title mb-0">R$ {{ estatisticas.vencidos.pagar.saldo|number_format(2, ',', '.') }}</h4>
                    <small class="text-muted">{{ estatisticas.vencidos.pagar.quantidade }} lancamento(s)</small>
                </div>
            </div>
        </div>
    </div>

    {# Busca Avancada #}
    {% include '_partials/search_panel.html.twig' with {
        filterDefs: filterDefs,
        filters: filters,
        routeName: 'app_lancamentos_index',
        itemsPerPage: itemsPerPage,
        sortField: sortField,
        sortDir: sortDir
    } %}

    {# Ordenacao #}
    {% include '_partials/sort_panel.html.twig' with {
        sortOptions: sortOptions,
        sortField: sortField,
        sortDir: sortDir,
        routeName: 'app_lancamentos_index',
        filters: filters,
        itemsPerPage: itemsPerPage
    } %}

    {# Tabela de Lancamentos #}
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span><i class="fas fa-list"></i> Lancamentos</span>
            <a href="{{ path('app_lancamentos_new') }}" class="btn btn-success btn-sm">
                <i class="fas fa-plus"></i> Novo Lancamento
            </a>
        </div>
        <div class="card-footer py-1">
            {% include '_partials/pagination.html.twig' with {
                totalItems: totalItems,
                currentPage: currentPage,
                itemsPerPage: itemsPerPage,
                totalPages: totalPages,
                routeName: 'app_lancamentos_index',
                filters: filters,
                sortField: sortField,
                sortDir: sortDir,
                showSearch: false
            } %}
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th width="60">N</th>
                            <th width="80">Tipo</th>
                            <th width="100">Vencimento</th>
                            <th>Credor/Pagador</th>
                            <th>Historico</th>
                            <th width="120" class="text-end">Valor</th>
                            <th width="120" class="text-end">Saldo</th>
                            <th width="100">Status</th>
                            <th width="150">Acoes</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for lancamento in lancamentos %}
                        <tr class="{{ lancamento.vencido ? 'table-warning' : '' }}" data-id="{{ lancamento.id }}">
                            <td>{{ lancamento.numero }}</td>
                            <td>
                                <span class="badge bg-{{ lancamento.tipoBadgeClass }}">
                                    {{ lancamento.tipoLabel }}
                                </span>
                            </td>
                            <td>
                                {{ lancamento.dataVencimento|date('d/m/Y') }}
                                {% if lancamento.vencido %}
                                    <br><small class="text-danger">{{ lancamento.diasAtraso }} dia(s)</small>
                                {% endif %}
                            </td>
                            <td>
                                {% if lancamento.tipo == 'pagar' and lancamento.pessoaCredor %}
                                    {{ lancamento.pessoaCredor.nome }}
                                {% elseif lancamento.tipo == 'receber' and lancamento.pessoaPagador %}
                                    {{ lancamento.pessoaPagador.nome }}
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                {{ lancamento.historico|default('-') }}
                                {% if lancamento.planoConta %}
                                    <br><small class="text-muted">{{ lancamento.planoConta.codigo }}</small>
                                {% endif %}
                            </td>
                            <td class="text-end">R$ {{ lancamento.valorFloat|number_format(2, ',', '.') }}</td>
                            <td class="text-end">
                                {% set saldo = lancamento.saldo %}
                                <span class="{{ saldo > 0 ? 'text-danger' : 'text-success' }}">
                                    R$ {{ saldo|number_format(2, ',', '.') }}
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-{{ lancamento.statusBadgeClass }}">
                                    {{ lancamento.statusLabel }}
                                </span>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="{{ path('app_lancamentos_edit', {id: lancamento.id}) }}"
                                       class="btn btn-warning" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    {% if lancamento.aberto or lancamento.pagoParcial %}
                                        <button type="button" class="btn btn-success btn-baixa"
                                                data-id="{{ lancamento.id }}"
                                                data-saldo="{{ lancamento.saldo }}"
                                                title="Baixar">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    {% endif %}
                                    {% if lancamento.pago or lancamento.pagoParcial %}
                                        <button type="button" class="btn btn-info btn-estornar"
                                                data-id="{{ lancamento.id }}"
                                                title="Estornar">
                                            <i class="fas fa-undo"></i>
                                        </button>
                                    {% endif %}
                                    {% if not lancamento.pago and not lancamento.cancelado %}
                                        <button type="button" class="btn btn-danger btn-cancelar"
                                                data-id="{{ lancamento.id }}"
                                                title="Cancelar">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="9" class="text-center text-muted py-4">
                                <i class="fas fa-info-circle fa-2x mb-2 d-block"></i>
                                <span>Nenhum lancamento encontrado</span><br>
                                <small>Clique em "Novo Lancamento" para comecar</small>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{# Modal Baixa #}
<div class="modal fade" id="modalBaixa" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Realizar Baixa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="baixa_id">
                <div class="mb-3">
                    <label class="form-label">Data Pagamento</label>
                    <input type="date" id="baixa_data" class="form-control" value="{{ 'now'|date('Y-m-d') }}">
                </div>
                <div class="mb-3">
                    <label class="form-label">Valor Pago</label>
                    <input type="number" id="baixa_valor" class="form-control" step="0.01" min="0">
                </div>
                <div class="mb-3">
                    <label class="form-label">Forma de Pagamento</label>
                    <select id="baixa_forma" class="form-select">
                        <option value="">Selecione...</option>
                        <option value="pix">PIX</option>
                        <option value="ted">TED</option>
                        <option value="boleto">Boleto</option>
                        <option value="dinheiro">Dinheiro</option>
                        <option value="debito">Debito</option>
                        <option value="credito">Credito</option>
                        <option value="cheque">Cheque</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success" id="btnConfirmarBaixa">
                    <i class="fas fa-check"></i> Confirmar Baixa
                </button>
            </div>
        </div>
    </div>
</div>

{# Modal Cancelar #}
<div class="modal fade" id="modalCancelar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cancelar Lancamento</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="cancelar_id">
                <div class="mb-3">
                    <label class="form-label">Motivo do Cancelamento</label>
                    <textarea id="cancelar_motivo" class="form-control" rows="3" required></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-danger" id="btnConfirmarCancelar">
                    <i class="fas fa-times"></i> Confirmar Cancelamento
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{{ encore_entry_script_tags('crud_filters') }}
<script>
    window.ROUTES = {
        baixa: '{{ path("app_lancamentos_baixa", {id: "__ID__"}) }}',
        estornar: '{{ path("app_lancamentos_estornar", {id: "__ID__"}) }}',
        cancelar: '{{ path("app_lancamentos_cancelar", {id: "__ID__"}) }}'
    };
</script>
{{ encore_entry_script_tags('lancamentos') }}
{% endblock %}
