{% extends 'base.html.twig' %}

{% block title %}Novo Lancamento - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Dashboard', 'url': path('app_dashboard')},
            {'label': 'Lancamentos', 'url': path('app_lancamentos_index')}
        ],
        'current': 'Novo Lancamento'
    } %}

    {# Flash messages #}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="card">
        <div class="card-header">
            <i class="fas fa-plus"></i> Novo Lancamento
        </div>
        <div class="card-body">
            {{ include('lancamentos/_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{{ encore_entry_script_tags('lancamentos') }}
{% endblock %}
