{% extends 'base.html.twig' %}

{% block title %}Lancamentos Vencidos - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Dashboard', 'url': path('app_dashboard')},
            {'label': 'Lancamentos', 'url': path('app_lancamentos_index')}
        ],
        'current': 'Vencidos'
    } %}

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>
                <i class="fas fa-exclamation-triangle text-warning"></i>
                Lancamentos Vencidos
                {% if tipo %}
                    - {{ tipo == 'pagar' ? 'A Pagar' : 'A Receber' }}
                {% endif %}
            </span>
            <div>
                <a href="{{ path('app_lancamentos_vencidos') }}" class="btn btn-outline-primary btn-sm {{ not tipo ? 'active' : '' }}">Todos</a>
                <a href="{{ path('app_lancamentos_vencidos', {tipo: 'pagar'}) }}" class="btn btn-outline-danger btn-sm {{ tipo == 'pagar' ? 'active' : '' }}">A Pagar</a>
                <a href="{{ path('app_lancamentos_vencidos', {tipo: 'receber'}) }}" class="btn btn-outline-success btn-sm {{ tipo == 'receber' ? 'active' : '' }}">A Receber</a>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th width="60">N</th>
                            <th width="80">Tipo</th>
                            <th width="100">Vencimento</th>
                            <th width="80">Atraso</th>
                            <th>Credor/Pagador</th>
                            <th>Historico</th>
                            <th width="120" class="text-end">Valor</th>
                            <th width="120" class="text-end">Saldo</th>
                            <th width="100">Acoes</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for lancamento in lancamentos %}
                        <tr>
                            <td>{{ lancamento.numero }}</td>
                            <td>
                                <span class="badge bg-{{ lancamento.tipoBadgeClass }}">
                                    {{ lancamento.tipoLabel }}
                                </span>
                            </td>
                            <td>{{ lancamento.dataVencimento|date('d/m/Y') }}</td>
                            <td>
                                <span class="badge bg-danger">{{ lancamento.diasAtraso }} dia(s)</span>
                            </td>
                            <td>
                                {% if lancamento.tipo == 'pagar' and lancamento.pessoaCredor %}
                                    {{ lancamento.pessoaCredor.nome }}
                                {% elseif lancamento.tipo == 'receber' and lancamento.pessoaPagador %}
                                    {{ lancamento.pessoaPagador.nome }}
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>{{ lancamento.historico|default('-') }}</td>
                            <td class="text-end">R$ {{ lancamento.valorFloat|number_format(2, ',', '.') }}</td>
                            <td class="text-end text-danger">R$ {{ lancamento.saldo|number_format(2, ',', '.') }}</td>
                            <td>
                                <a href="{{ path('app_lancamentos_edit', {id: lancamento.id}) }}"
                                   class="btn btn-warning btn-sm" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="9" class="text-center text-muted py-4">
                                <i class="fas fa-check-circle fa-2x mb-2 d-block text-success"></i>
                                <span>Nenhum lancamento vencido</span>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
