{% extends 'base.html.twig' %}

{% block title %}Novo Tipo de Pessoa - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Tipos', 'url': path('app_dashboard_tipos_index')},
            {'label': 'Lista de Tipos de Pessoa', 'url': path('app_tipo_pessoa_index')}
        ],
        'current': 'Novo Tipo de Pessoa'
    } %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-plus"></i> Novo Tipo de Pessoa</h1>
                <a href="{{ path('app_tipo_pessoa_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.tipo) }}
                            </div>
                            <div class="col-md-6">
                                <div class="form-check mt-4 pt-2">
                                    {{ form_widget(form.ativo) }}
                                    {{ form_label(form.ativo) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                {{ form_row(form.descricao) }}
                            </div>
                        </div>
                        
                        <div class="row mt-3">
                            <div class="col-12">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save"></i> Salvar Tipo
                                </button>
                                <a href="{{ path('app_tipo_pessoa_index') }}" class="btn btn-secondary ms-2">
                                    <i class="fas fa-times"></i> Cancelar
                                </a>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
