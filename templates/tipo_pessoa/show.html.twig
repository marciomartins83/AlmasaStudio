{% extends 'base.html.twig' %}

{% block title %}{{ tipo_pessoa.tipo }} - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Tipos', 'url': path('app_dashboard_tipos_index')},
            {'label': 'Lista de Tipos de Pessoa', 'url': path('app_tipo_pessoa_index')}
        ],
        'current': 'Ver Tipo de Pessoa'
    } %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-users"></i> {{ tipo_pessoa.tipo }}</h1>
                <div>
                    <a href="{{ path('app_tipo_pessoa_edit', {'id': tipo_pessoa.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar Tipo
                    </a>
                    <a href="{{ path('app_tipo_pessoa_index') }}" class="btn btn-secondary ms-2">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="150">ID:</th>
                                    <td>{{ tipo_pessoa.id }}</td>
                                </tr>
                                <tr>
                                    <th>Tipo:</th>
                                    <td><strong>{{ tipo_pessoa.tipo }}</strong></td>
                                </tr>
                                <tr>
                                    <th>Descrição:</th>
                                    <td>{{ tipo_pessoa.descricao|default('Sem descrição') }}</td>
                                </tr>
                                <tr>
                                    <th>Status:</th>
                                    <td>
                                        {% if tipo_pessoa.ativo %}
                                            <span class="badge bg-success">Ativo</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Inativo</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
