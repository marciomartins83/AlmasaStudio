{% extends 'base.html.twig' %}

{% block title %}Tipos de Pessoas - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Tipos', 'url': path('app_dashboard_tipos_index')}
        ],
        'current': 'Lista de Tipos de Pessoa'
    } %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-users"></i> Tipos de Pessoas</h1>
                <a href="{{ path('app_tipo_pessoa_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Novo Tipo
                </a>
            </div>

            {% include '_partials/search_panel.html.twig' with {
                filterDefs: pagination.filterDefs,
                filters: pagination.filters,
                routeName: 'app_tipo_pessoa_index',
                itemsPerPage: pagination.itemsPerPage,
                sortField: pagination.sortField,
                sortDir: pagination.sortDir
            } %}

            {% include '_partials/sort_panel.html.twig' with {
                sortOptions: pagination.sortOptions,
                sortField: pagination.sortField,
                sortDir: pagination.sortDir,
                routeName: 'app_tipo_pessoa_index',
                filters: pagination.filters,
                itemsPerPage: pagination.itemsPerPage
            } %}

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th width="80">ID</th>
                                    <th>Tipo de Pessoa</th>
                                    <th>Descrição</th>
                                    <th width="100">Status</th>
                                    <th width="200">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for tipo_pessoa in pagination.items %}
                                <tr>
                                    <td>{{ tipo_pessoa.id }}</td>
                                    <td><strong>{{ tipo_pessoa.tipo }}</strong></td>
                                    <td>{{ tipo_pessoa.descricao|default('Sem descrição') }}</td>
                                    <td>
                                        {% if tipo_pessoa.ativo %}
                                            <span class="badge bg-success">Ativo</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Inativo</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group-vertical btn-group-sm d-md-none" role="group">
                                            <a href="{{ path('app_tipo_pessoa_show', {'id': tipo_pessoa.id}) }}" 
                                               class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Ver
                                            </a>
                                            <a href="{{ path('app_tipo_pessoa_edit', {'id': tipo_pessoa.id}) }}" 
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                        </div>
                                        <div class="btn-group d-none d-md-flex" role="group">
                                            <a href="{{ path('app_tipo_pessoa_show', {'id': tipo_pessoa.id}) }}" 
                                               class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Ver
                                            </a>
                                            <a href="{{ path('app_tipo_pessoa_edit', {'id': tipo_pessoa.id}) }}" 
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <form method="post" 
                                                  action="{{ path('app_tipo_pessoa_delete', {'id': tipo_pessoa.id}) }}" 
                                                  style="display:inline-block"
                                                  onsubmit="return confirm('Tem certeza que deseja excluir este tipo de pessoa?')">
                                                <input type="hidden" name="_token" 
                                                       value="{{ csrf_token('delete' ~ tipo_pessoa.id) }}">
                                                <button class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i> Excluir
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        <i class="fas fa-info-circle fa-2x mb-2 d-block"></i>
                                        <span>Nenhum tipo de pessoa cadastrado</span><br>
                                        <small>Clique em "Novo Tipo" para começar</small>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    {% include '_partials/pagination.html.twig' with {
                        totalItems: pagination.totalItems,
                        currentPage: pagination.currentPage,
                        itemsPerPage: pagination.itemsPerPage,
                        totalPages: pagination.totalPages,
                        search: pagination.search,
                        routeName: 'app_tipo_pessoa_index',
                        filters: pagination.filters,
                        sortField: pagination.sortField,
                        sortDir: pagination.sortDir,
                        showSearch: false
                    } %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('crud_filters') }}
{% endblock %}
