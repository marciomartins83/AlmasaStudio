{% extends 'base.html.twig' %}

{% block title %}Locatários - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Dashboard', 'url': path('app_dashboard')}
        ],
        'current': 'Lista de Locatários'
    } %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-user-tie"></i> Locatários</h1>
                <a href="{{ path('app_pessoa_locatario_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Novo Locatário
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th width="80">ID</th>
                                    <th>Nome</th>
                                    <th width="120">Tipo</th>
                                    <th width="150">Aluguel Máximo</th>
                                    <th width="100">Status</th>
                                    <th width="200">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for locatario in locatarios %}
                                <tr>
                                    <td>{{ locatario.id }}</td>
                                    <td><strong>Nome da Pessoa</strong></td>
                                    <td>
                                        <span class="badge bg-info">
                                            {% if locatario.procuraAluguel and locatario.procuraCompra %}
                                                Aluguel/Compra
                                            {% elseif locatario.procuraAluguel %}
                                                Aluguel
                                            {% elseif locatario.procuraCompra %}
                                                Compra
                                            {% else %}
                                                -
                                            {% endif %}
                                        </span>
                                    </td>
                                    <td>
                                        {% if locatario.aluguelMaximo %}
                                            <span class="badge bg-success">R$ {{ locatario.aluguelMaximo|number_format(2, ',', '.') }}</span>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if locatario.disponivel %}
                                            <span class="badge bg-success">Disponível</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Indisponível</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group-vertical btn-group-sm d-md-none" role="group">
                                            <a href="{{ path('app_pessoa_locatario_show', {'id': locatario.id}) }}" 
                                               class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Ver
                                            </a>
                                            <a href="{{ path('app_pessoa_locatario_edit', {'id': locatario.id}) }}" 
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                        </div>
                                        <div class="btn-group d-none d-md-flex" role="group">
                                            <a href="{{ path('app_pessoa_locatario_show', {'id': locatario.id}) }}" 
                                               class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Ver
                                            </a>
                                            <a href="{{ path('app_pessoa_locatario_edit', {'id': locatario.id}) }}" 
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <form method="post" 
                                                  action="{{ path('app_pessoa_locatario_delete', {'id': locatario.id}) }}" 
                                                  style="display:inline-block"
                                                  onsubmit="return confirm('Tem certeza que deseja excluir este locatário?')">
                                                <input type="hidden" name="_token" 
                                                       value="{{ csrf_token('delete' ~ locatario.id) }}">
                                                <button class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i> Excluir
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="6" class="text-center text-muted py-4">
                                        <i class="fas fa-info-circle fa-2x mb-2 d-block"></i>
                                        <span>Nenhum locatário cadastrado</span><br>
                                        <small>Clique em "Novo Locatário" para começar</small>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}