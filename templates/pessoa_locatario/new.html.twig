{% extends 'base.html.twig' %}

{% block title %}Novo Locatário - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [{'label': 'Lista de Locatários', 'url': path('app_pessoa_locatario_index')}],
        'current': 'Novo Locatário'
    } %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-plus"></i> Novo Locatário</h1>
                <a href="{{ path('app_pessoa_locatario_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.nome) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.fisicaJuridica) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.dataNascimento) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.estadoCivil) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.renda) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.quartosDesejados) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.aluguelMaximo) }}
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-12">{{ form_row(form.disponivel) }}</div>
                                    <div class="col-12">{{ form_row(form.procuraAluguel) }}</div>
                                    <div class="col-12">{{ form_row(form.procuraCompra) }}</div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                {{ form_row(form.observacoes) }}
                            </div>
                        </div>
                        
                        <div class="row mt-3">
                            <div class="col-12">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save"></i> Salvar Locatário
                                </button>
                                <a href="{{ path('app_pessoa_locatario_index') }}" class="btn btn-secondary ms-2">
                                    <i class="fas fa-times"></i> Cancelar
                                </a>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}