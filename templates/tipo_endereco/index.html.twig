{% extends 'base.html.twig' %}

{% block title %}Tipos de Endereço - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Tipos', 'url': path('app_dashboard_tipos_index')}
        ],
        'current': 'Lista de Tipos de Endereço'
    } %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-map-marker-alt"></i> Tipos de Endereço</h1>
                <a href="{{ path('app_tipo_endereco_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Novo Tipo
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th width="80">ID</th>
                                    <th>Tipo de Endereço</th>
                                    <th width="200">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for tipo_endereco in tipos_endereco %}
                                <tr>
                                    <td>{{ tipo_endereco.id }}</td>
                                    <td><strong>{{ tipo_endereco.tipo }}</strong></td>
                                    <td>
                                        <div class="btn-group-vertical btn-group-sm d-md-none" role="group">
                                            <a href="{{ path('app_tipo_endereco_show', {'id': tipo_endereco.id}) }}" 
                                               class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Ver
                                            </a>
                                            <a href="{{ path('app_tipo_endereco_edit', {'id': tipo_endereco.id}) }}" 
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                        </div>
                                        <div class="btn-group d-none d-md-flex" role="group">
                                            <a href="{{ path('app_tipo_endereco_show', {'id': tipo_endereco.id}) }}" 
                                               class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Ver
                                            </a>
                                            <a href="{{ path('app_tipo_endereco_edit', {'id': tipo_endereco.id}) }}" 
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            {{ include('tipo_endereco/_delete_form.html.twig') }}
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="3" class="text-center text-muted py-4">
                                        <i class="fas fa-info-circle fa-2x mb-2 d-block"></i>
                                        <span>Nenhum tipo de endereço cadastrado</span><br>
                                        <small>Clique em "Novo Tipo" para começar</small>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
