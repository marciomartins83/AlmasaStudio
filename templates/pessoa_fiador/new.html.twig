                `).join('');
                conjugeResults.style.display = 'block';
            } else {
                conjugeResults.innerHTML = '<div class="alert alert-info">Nenhum c√¥njuge encontrado</div>';
                conjugeResults.style.display = 'block';
            }
        } catch (error) {
            console.error('Erro na busca de c√¥njuge:', error);
