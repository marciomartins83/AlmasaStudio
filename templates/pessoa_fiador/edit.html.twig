{% extends 'base.html.twig' %}

{% block title %}Editar Fiador{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Fiadores', 'url': path('app_pessoa_fiador_index')}
        ],
        'current': 'Editar Fiador'
    } %}
    
    <div class="row">
        <div class="col-12">
            <h1><i class="fas fa-edit"></i> Editar Fiador</h1>

            {{ form_start(form) }}
            
            <div class="card mb-4">
                <div class="card-header">
                    <h3><i class="fas fa-user"></i> Dados do Fiador</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            {{ form_widget(form) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 text-end">
                            <a href="{{ path('app_pessoa_fiador_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Salvar Alterações
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            {{ form_end(form) }}

            <!-- Formulário de exclusão -->
            <div class="mt-3">
                {{ include('pessoa_fiador/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}