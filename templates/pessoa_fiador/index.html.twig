{% extends 'base.html.twig' %}

{% block title %}Pessoas Fiadores{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'current': 'Lista de Fiadores'
    } %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-handshake"></i> Pessoas Fiadores</h1>
        <a href="{{ path('app_pessoa_fiador_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Novo Fiador
        </a>
    </div>

    {% include '_partials/search_panel.html.twig' with {
        filterDefs: pagination.filterDefs,
        filters: pagination.filters,
        routeName: 'app_pessoa_fiador_index',
        itemsPerPage: pagination.itemsPerPage,
        sortField: pagination.sortField,
        sortDir: pagination.sortDir
    } %}

    {% include '_partials/sort_panel.html.twig' with {
        sortOptions: pagination.sortOptions,
        sortField: pagination.sortField,
        sortDir: pagination.sortDir,
        routeName: 'app_pessoa_fiador_index',
        filters: pagination.filters,
        itemsPerPage: pagination.itemsPerPage
    } %}

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>ID Pessoa</th>
                    <th>ID Cônjuge</th>
                    <th>Já Foi Fiador</th>
                    <th>Cônjuge Trabalha</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for fiador in pagination.items %}
                <tr>
                    <td>{{ fiador.id }}</td>
                    <td>{{ fiador.idPessoa }}</td>
                    <td>{{ fiador.idConjuge ?? '-' }}</td>
                    <td>{{ fiador.jaFoiFiador ? 'Sim' : 'Não' }}</td>
                    <td>{{ fiador.conjugeTrabalha ? 'Sim' : 'Não' }}</td>
                    <td>
                        <a href="{{ path('app_pessoa_fiador_edit', {'id': fiador.id}) }}" class="btn btn-sm btn-primary">Editar</a>
                        <form method="post" action="{{ path('app_pessoa_fiador_delete', {'id': fiador.id}) }}" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ fiador.id) }}">
                            <button class="btn btn-sm btn-danger" onclick="return confirm('Confirma exclusão?')">Excluir</button>
                        </form>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {% include '_partials/pagination.html.twig' with {
        totalItems: pagination.totalItems,
        currentPage: pagination.currentPage,
        itemsPerPage: pagination.itemsPerPage,
        totalPages: pagination.totalPages,
        search: pagination.search,
        filters: pagination.filters,
        sortField: pagination.sortField,
        sortDir: pagination.sortDir,
        routeName: 'app_pessoa_fiador_index',
        showSearch: false
    } %}
</div>
{% endblock %}

{% block javascripts %}{{ parent() }}{{ encore_entry_script_tags('crud_filters') }}{% endblock %}
