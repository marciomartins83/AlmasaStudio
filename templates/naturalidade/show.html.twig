{% extends 'base.html.twig' %}

{% block title %}Naturalidade {{ naturalidade.nome }} - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'EndereÃ§os', 'url': path('app_dashboard_enderecos_index')},
            {'label': 'Naturalidades', 'url': path('app_naturalidade_index')}
        ],
        'current': 'Ver Naturalidade'
    } %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-globe-americas"></i> {{ naturalidade.nome }}</h1>
                <div>
                    <a href="{{ path('app_naturalidade_edit', {'id': naturalidade.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar Naturalidade
                    </a>
                    <a href="{{ path('app_naturalidade_index') }}" class="btn btn-secondary ms-2">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="150">ID:</th>
                                    <td>{{ naturalidade.id }}</td>
                                </tr>
                                <tr>
                                    <th>Nome:</th>
                                    <td><strong>{{ naturalidade.nome }}</strong></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
