{% extends 'base.html.twig' %}

{% block title %}Historico de Prestacoes - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Dashboard', 'url': path('app_dashboard')},
            {'label': 'Prestacao de Contas', 'url': path('app_prestacao_contas_index')}
        ],
        'current': 'Historico'
    } %}

    {# Tabela de Historico #}
    <div class="card">
        <div class="card-header">
            <i class="fas fa-history"></i> Historico de Prestacoes do Proprietario
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th width="100">Numero</th>
                            <th>Proprietario</th>
                            <th>Imovel</th>
                            <th width="200">Periodo</th>
                            <th width="120" class="text-end">Valor Repasse</th>
                            <th width="100">Status</th>
                            <th width="120">Data Repasse</th>
                            <th width="100">Acoes</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for prestacao in prestacoes %}
                        <tr>
                            <td>{{ prestacao.numeroFormatado }}</td>
                            <td>{{ prestacao.proprietario.nome }}</td>
                            <td>
                                {% if prestacao.imovel %}
                                    {{ prestacao.imovel.id }}
                                {% else %}
                                    <span class="text-muted">Todos</span>
                                {% endif %}
                            </td>
                            <td>{{ prestacao.periodoFormatado }}</td>
                            <td class="text-end fw-bold">R$ {{ prestacao.valorRepasseFloat|number_format(2, ',', '.') }}</td>
                            <td>
                                <span class="badge bg-{{ prestacao.statusBadgeClass }}">
                                    {{ prestacao.statusLabel }}
                                </span>
                            </td>
                            <td>
                                {% if prestacao.dataRepasse %}
                                    {{ prestacao.dataRepasse|date('d/m/Y') }}
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="{{ path('app_prestacao_contas_visualizar', {id: prestacao.id}) }}"
                                       class="btn btn-info" title="Visualizar">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_prestacao_contas_pdf', {id: prestacao.id}) }}"
                                       class="btn btn-secondary" title="PDF" target="_blank">
                                        <i class="fas fa-file-pdf"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">
                                <i class="fas fa-info-circle fa-2x mb-2 d-block"></i>
                                <span>Nenhuma prestacao de contas encontrada para este proprietario</span>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ path('app_prestacao_contas_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
    </div>
</div>
{% endblock %}
