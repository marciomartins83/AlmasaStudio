{% extends 'base.html.twig' %}

{% block title %}Telefone: {{ telefone.numero }} - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Lista de Telefones', 'url': path('app_telefone_index')}
        ],
        'current': 'Ver Telefone'
    } %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-phone"></i> Telefone: {{ telefone.numero }}</h1>
                <div>
                    <a href="{{ path('app_telefone_edit', {'id': telefone.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a href="{{ path('app_telefone_index') }}" class="btn btn-secondary ms-2">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle"></i> Informações do Telefone
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <th width="120"><i class="fas fa-hashtag text-muted"></i> ID:</th>
                                        <td><strong>{{ telefone.id }}</strong></td>
                                    </tr>
                                    <tr>
                                        <th><i class="fas fa-phone text-muted"></i> Número:</th>
                                        <td><span class="badge bg-primary fs-6">{{ telefone.numero }}</span></td>
                                    </tr>
                                    <tr>
                                        <th><i class="fas fa-tag text-muted"></i> Tipo:</th>
                                        <td>{{ telefone.idTipo }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <div>
                            <a href="{{ path('app_telefone_edit', {'id': telefone.id}) }}" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Editar Telefone
                            </a>
                        </div>
                        <div>
                            <a href="{{ path('app_telefone_index') }}" class="btn btn-secondary">
                                <i class="fas fa-list"></i> Lista de Telefones
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 