<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Relatorio de Inadimplentes</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: DejaVu Sans, sans-serif; font-size: 10px; line-height: 1.4; color: #333; }
        .container { padding: 15px; }
        .header { text-align: center; border-bottom: 2px solid #333; padding-bottom: 10px; margin-bottom: 15px; }
        .header h1 { font-size: 16px; margin-bottom: 3px; }
        .header p { font-size: 9px; color: #666; }
        .header .titulo { font-size: 14px; font-weight: bold; margin-top: 8px; color: #c00; }
        .header .periodo { font-size: 10px; margin-top: 3px; }
        table { width: 100%; border-collapse: collapse; margin-bottom: 10px; }
        th, td { border: 1px solid #ccc; padding: 4px 6px; text-align: left; font-size: 9px; }
        th { background: #333; color: #fff; font-weight: bold; }
        .text-right { text-align: right; }
        .text-center { text-align: center; }
        .text-danger { color: #c00; }
        .text-success { color: #080; }
        .grupo-header { background: #555; color: #fff; font-weight: bold; }
        .grupo-subtotal { background: #f0f0f0; font-weight: bold; }
        .total-row { background: #007bff; color: #fff; font-weight: bold; }
        .footer { margin-top: 20px; text-align: center; font-size: 8px; color: #666; border-top: 1px solid #ccc; padding-top: 8px; }
        .badge { display: inline-block; padding: 2px 6px; border-radius: 3px; font-size: 8px; font-weight: bold; }
        .badge-danger { background: #dc3545; color: #fff; }
    </style>
</head>
<body>
    <div class="container">
        {% include 'relatorios/pdf/_header.html.twig' with {
            titulo: 'RELATORIO DE INADIMPLENTES',
            subtitulo: 'Posicao em: ' ~ filtros.data_referencia|date('d/m/Y') ~ ' | Atraso minimo: ' ~ (filtros.dias_atraso_minimo|default(1)) ~ ' dia(s)'
        } %}

        <table>
            <thead>
                <tr>
                    <th>Inquilino</th>
                    <th>Imovel</th>
                    <th>Compet.</th>
                    <th>Venc.</th>
                    <th class="text-center">Dias</th>
                    <th class="text-right">Valor</th>
                    <th class="text-right">J/M</th>
                    <th class="text-right">Atualizado</th>
                </tr>
            </thead>
            <tbody>
                {% if dados.dados is iterable and dados.dados|length > 0 %}
                    {% set primeiro = dados.dados|first %}
                    {% if primeiro.itens is defined %}
                        {% for grupo in dados.dados %}
                            <tr class="grupo-header">
                                <td colspan="8">{{ grupo.nome }}</td>
                            </tr>
                            {% for item in grupo.itens %}
                                <tr>
                                    <td>{{ item.lancamento.inquilino.nome|default('-')|length > 25 ? item.lancamento.inquilino.nome|default('-')|slice(0, 25) ~ '...' : item.lancamento.inquilino.nome|default('-') }}</td>
                                    <td>{{ item.lancamento.imovel.id|default('-') }}</td>
                                    <td>{{ item.lancamento.competenciaFormatada|default('-') }}</td>
                                    <td>{{ item.lancamento.dataVencimento|date('d/m/Y') }}</td>
                                    <td class="text-center"><span class="badge badge-danger">{{ item.dias_atraso }}</span></td>
                                    <td class="text-right">{{ item.valor_original|number_format(2, ',', '.') }}</td>
                                    <td class="text-right text-danger">{{ (item.valor_juros + item.valor_multa)|number_format(2, ',', '.') }}</td>
                                    <td class="text-right">{{ item.valor_atualizado|number_format(2, ',', '.') }}</td>
                                </tr>
                            {% endfor %}
                            <tr class="grupo-subtotal">
                                <td colspan="5" class="text-right">Subtotal:</td>
                                <td class="text-right">{{ grupo.total_original|number_format(2, ',', '.') }}</td>
                                <td class="text-right">{{ (grupo.total_juros + grupo.total_multa)|number_format(2, ',', '.') }}</td>
                                <td class="text-right">{{ grupo.total_atualizado|number_format(2, ',', '.') }}</td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        {% for item in dados.dados %}
                            <tr>
                                <td>{{ item.lancamento.inquilino.nome|default('-')|length > 25 ? item.lancamento.inquilino.nome|default('-')|slice(0, 25) ~ '...' : item.lancamento.inquilino.nome|default('-') }}</td>
                                <td>{{ item.lancamento.imovel.id|default('-') }}</td>
                                <td>{{ item.lancamento.competenciaFormatada|default('-') }}</td>
                                <td>{{ item.lancamento.dataVencimento|date('d/m/Y') }}</td>
                                <td class="text-center"><span class="badge badge-danger">{{ item.dias_atraso }}</span></td>
                                <td class="text-right">{{ item.valor_original|number_format(2, ',', '.') }}</td>
                                <td class="text-right text-danger">{{ (item.valor_juros + item.valor_multa)|number_format(2, ',', '.') }}</td>
                                <td class="text-right">{{ item.valor_atualizado|number_format(2, ',', '.') }}</td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center">Nenhum inadimplente encontrado.</td>
                    </tr>
                {% endif %}
            </tbody>
            {% if dados.totais.quantidade > 0 %}
            <tfoot>
                <tr class="total-row">
                    <td colspan="4" class="text-right">TOTAL ({{ dados.totais.quantidade }} registros):</td>
                    <td></td>
                    <td class="text-right">R$ {{ dados.totais.total_original|number_format(2, ',', '.') }}</td>
                    <td class="text-right">R$ {{ (dados.totais.total_juros + dados.totais.total_multa)|number_format(2, ',', '.') }}</td>
                    <td class="text-right">R$ {{ dados.totais.total_atualizado|number_format(2, ',', '.') }}</td>
                </tr>
            </tfoot>
            {% endif %}
        </table>

        {% include 'relatorios/pdf/_footer.html.twig' %}
    </div>
</body>
</html>
