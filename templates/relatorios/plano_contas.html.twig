{% extends 'base.html.twig' %}

{% block title %}Relatorio Plano de Contas - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Dashboard', 'url': path('app_dashboard')},
            {'label': 'Relatorios', 'url': path('app_relatorios_index')}
        ],
        'current': 'Plano de Contas'
    } %}

    <div class="row">
        {# Filtros #}
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <i class="fas fa-filter"></i> Filtros
                </div>
                <div class="card-body">
                    <form id="formFiltros">
                        <div class="mb-3">
                            <label for="tipo" class="form-label">Tipo</label>
                            <select class="form-select" id="tipo" name="tipo">
                                <option value="todos">Todos</option>
                                <option value="receita">Receita</option>
                                <option value="despesa">Despesa</option>
                                <option value="transitoria">Transitoria</option>
                                <option value="caixa">Caixa</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="ativo" class="form-label">Status</label>
                            <select class="form-select" id="ativo" name="ativo">
                                <option value="todos">Todos</option>
                                <option value="ativos" selected>Ativos</option>
                                <option value="inativos">Inativos</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="mostrar_totais" name="mostrar_totais">
                                <label class="form-check-label" for="mostrar_totais">
                                    Mostrar totais movimentados
                                </label>
                            </div>
                        </div>

                        <div id="periodoTotais" style="display: none;">
                            <div class="row mb-3">
                                <div class="col-6">
                                    <label for="data_inicio" class="form-label">Data Inicio</label>
                                    <input type="date" class="form-control" id="data_inicio" name="data_inicio"
                                           value="{{ "first day of this month"|date('Y-m-d') }}">
                                </div>
                                <div class="col-6">
                                    <label for="data_fim" class="form-label">Data Fim</label>
                                    <input type="date" class="form-control" id="data_fim" name="data_fim"
                                           value="{{ "now"|date('Y-m-d') }}">
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="button" id="btnPreview" class="btn btn-primary">
                                <i class="fas fa-search"></i> Preview
                            </button>
                            <button type="button" id="btnPdf" class="btn btn-danger" disabled>
                                <i class="fas fa-file-pdf"></i> Gerar PDF
                            </button>
                            <a href="{{ path('app_relatorios_index') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        {# Preview #}
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-eye"></i> Preview do Relatorio
                </div>
                <div class="card-body" id="previewContent">
                    <div class="text-center text-muted py-5">
                        <i class="fas fa-info-circle fa-3x mb-3"></i>
                        <p>Preencha os filtros e clique em "Preview" para visualizar o relatorio.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    window.ROUTES = {
        preview: '{{ path('app_relatorios_plano_contas_preview') }}',
        pdf: '{{ path('app_relatorios_plano_contas_pdf') }}'
    };
    window.RELATORIO_TIPO = 'plano_contas';

    // Mostrar/ocultar periodo quando marcar totais
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('mostrar_totais').addEventListener('change', function() {
            document.getElementById('periodoTotais').style.display = this.checked ? 'block' : 'none';
        });
    });
</script>
{{ encore_entry_script_tags('relatorios') }}
{% endblock %}
