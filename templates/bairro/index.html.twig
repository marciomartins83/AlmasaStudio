{% extends 'base.html.twig' %}

{% block title %}Bairros - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Endereços', 'url': path('app_dashboard_enderecos_index')}
        ],
        'current': 'Lista de Bairros'
    } %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-map-signs"></i> Bairros</h1>
                <a href="{{ path('app_bairro_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Novo Bairro
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th width="80">ID</th>
                                    <th>Nome</th>
                                    <th width="200">Cidade</th>
                                    <th width="120">Código</th>
                                    <th width="200">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for bairro in pagination.items %}
                                <tr>
                                    <td>{{ bairro.id }}</td>
                                    <td><strong>{{ bairro.nome }}</strong></td>
                                    <td>
                                        {% if bairro.cidade %}
                                            <span class="badge bg-success">{{ bairro.cidade.nome }}</span>
                                        {% else %}
                                            <span class="text-muted">Cidade não encontrada</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if bairro.codigo %}
                                            <span class="badge bg-secondary">{{ bairro.codigo }}</span>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group-vertical btn-group-sm d-md-none" role="group">
                                            <a href="{{ path('app_bairro_show', {'id': bairro.id}) }}" 
                                               class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Ver
                                            </a>
                                            <a href="{{ path('app_bairro_edit', {'id': bairro.id}) }}" 
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                        </div>
                                        <div class="btn-group d-none d-md-flex" role="group">
                                            <a href="{{ path('app_bairro_show', {'id': bairro.id}) }}" 
                                               class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Ver
                                            </a>
                                            <a href="{{ path('app_bairro_edit', {'id': bairro.id}) }}" 
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <form method="post" 
                                                  action="{{ path('app_bairro_delete', {'id': bairro.id}) }}" 
                                                  style="display:inline-block"
                                                  onsubmit="return confirm('Tem certeza que deseja excluir este bairro?')">
                                                <input type="hidden" name="_token" 
                                                       value="{{ csrf_token('delete' ~ bairro.id) }}">
                                                <button class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i> Excluir
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        <i class="fas fa-info-circle fa-2x mb-2 d-block"></i>
                                        <span>Nenhum bairro cadastrado</span><br>
                                        <small>Clique em "Novo Bairro" para começar</small>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    {% include '_partials/pagination.html.twig' with {
                        totalItems: pagination.totalItems,
                        currentPage: pagination.currentPage,
                        itemsPerPage: pagination.itemsPerPage,
                        totalPages: pagination.totalPages,
                        search: pagination.search,
                        routeName: 'app_bairro_index'
                    } %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
