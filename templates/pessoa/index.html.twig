{% extends 'base.html.twig' %}

{% block title %}Pessoas{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'current': 'Lista de Pessoas'
    } %}
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-users"></i> Pessoas</h1>
        <a href="{{ path('app_pessoa_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nova Pessoa
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Documento</th>
                            <th>Tipo(s)</th>
                            <th>Status</th>
                            <th class="text-end">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for pessoa in pagination.items %}
                        <tr>
                            <td>{{ pessoa.idpessoa }}</td>
                            <td>{{ pessoa.nome }}</td>
                            <td>
                                <span class="badge bg-secondary">{{ pessoa.fisicaJuridica == 'fisica' ? 'Física' : 'Jurídica' }}</span>
                            </td>
                            <td>
                                <span class="text-muted small">-</span>
                            </td>
                            <td>
                                {% if pessoa.status %}
                                    <span class="badge bg-success">Ativo</span>
                                {% else %}
                                    <span class="badge bg-danger">Inativo</span>
                                {% endif %}
                            </td>
                            <td class="text-end">
                                <a href="{{ path('app_pessoa_show', {'id': pessoa.idpessoa}) }}" class="btn btn-sm btn-info" title="Ver">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_pessoa_edit', {'id': pessoa.idpessoa}) }}" class="btn btn-sm btn-primary" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                {{ include('pessoa/_delete_form.html.twig', {'pessoa': pessoa}) }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center">Nenhuma pessoa encontrada.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            {% include '_partials/pagination.html.twig' with {
                totalItems: pagination.totalItems,
                currentPage: pagination.currentPage,
                itemsPerPage: pagination.itemsPerPage,
                totalPages: pagination.totalPages,
                search: pagination.search,
                routeName: 'app_pessoa_index'
            } %}
        </div>
    </div>
</div>
{% endblock %}
