{% extends 'base.html.twig' %}

{% block title %}Editar Pessoa
{% endblock %}

{% block content %}
	<h1>Editar Pessoa</h1>

	{{ include('pessoa/_form.html.twig', {'button_label': 'Atualizar'}) }}

	<a href="{{ path('app_pessoa') }}">Voltar para a lista</a>

	{{ include('pessoa/_delete_form.html.twig') }}

	<script>
		function toggleUserFields() {
const criarUsuario = document.getElementById('pessoa_criarUsuario');
const emailField = document.getElementById('userEmailField') ?. closest('.form-group');
const passwordField = document.getElementById('userPasswordField') ?. closest('.form-group');

if (criarUsuario ?. checked) {
emailField.style.display = 'block';
passwordField.style.display = 'block';
} else {
emailField.style.display = 'none';
passwordField.style.display = 'none';
}
}

// Executar no carregamento da p√°gina
document.addEventListener('DOMContentLoaded', toggleUserFields);
	</script>
{% endblock %}
