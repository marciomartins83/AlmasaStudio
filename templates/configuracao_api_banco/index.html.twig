{% extends 'base.html.twig' %}

{% block title %}Configuração API Bancária - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Dashboard', 'url': path('app_dashboard')}
        ],
        'current': 'Configuração API Bancária'
    } %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-cogs"></i> Configuração API Bancária</h1>
                <a href="{{ path('app_configuracao_api_banco_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nova Configuração
                </a>
            </div>

            {% include '_partials/search_panel.html.twig' with {
                filterDefs: pagination.filterDefs,
                filters: pagination.filters,
                routeName: 'app_configuracao_api_banco_index',
                itemsPerPage: pagination.itemsPerPage,
                sortField: pagination.sortField,
                sortDir: pagination.sortDir
            } %}

            {% include '_partials/sort_panel.html.twig' with {
                sortOptions: pagination.sortOptions,
                sortField: pagination.sortField,
                sortDir: pagination.sortDir,
                routeName: 'app_configuracao_api_banco_index',
                filters: pagination.filters,
                itemsPerPage: pagination.itemsPerPage
            } %}

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th width="60">ID</th>
                                    <th>Banco</th>
                                    <th>Conta</th>
                                    <th>Convênio</th>
                                    <th width="100">Ambiente</th>
                                    <th width="140">Certificado</th>
                                    <th width="80">Status</th>
                                    <th width="180">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for config in pagination.items %}
                                <tr data-id="{{ config.id }}">
                                    <td>{{ config.id }}</td>
                                    <td>
                                        {% if config.banco %}
                                            <strong>{{ '%03d'|format(config.banco.numero) }}</strong>
                                            - {{ config.banco.nome }}
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if config.contaBancaria %}
                                            {{ config.contaBancaria.codigo }}-{{ config.contaBancaria.digitoConta ?? '0' }}
                                            {% if config.contaBancaria.titular %}
                                                <br><small class="text-muted">{{ config.contaBancaria.titular }}</small>
                                            {% endif %}
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ config.convenio }}</td>
                                    <td>
                                        {% if config.ambiente == 'producao' %}
                                            <span class="badge bg-danger">Produção</span>
                                        {% else %}
                                            <span class="badge bg-info">Sandbox</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if config.certificadoPath %}
                                            {% if config.isCertificadoValido %}
                                                <span class="badge bg-success">
                                                    <i class="fas fa-certificate"></i> Válido
                                                </span>
                                                <br>
                                                <small class="text-muted">
                                                    até {{ config.certificadoValidade|date('d/m/Y') }}
                                                </small>
                                            {% else %}
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-exclamation-triangle"></i> Expirado
                                                </span>
                                                <br>
                                                <small class="text-danger">
                                                    em {{ config.certificadoValidade|date('d/m/Y') }}
                                                </small>
                                            {% endif %}
                                        {% else %}
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-times"></i> Não enviado
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if config.ativo %}
                                            <span class="badge bg-success">Ativo</span>
                                        {% else %}
                                            <span class="badge bg-danger">Inativo</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button type="button"
                                                    class="btn btn-info btn-sm btn-testar-conexao"
                                                    data-id="{{ config.id }}"
                                                    title="Testar Conexão">
                                                <i class="fas fa-plug"></i>
                                            </button>
                                            <a href="{{ path('app_configuracao_api_banco_edit', {id: config.id}) }}"
                                               class="btn btn-warning btn-sm"
                                               title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button"
                                                    class="btn btn-danger btn-sm btn-deletar"
                                                    data-id="{{ config.id }}"
                                                    title="Excluir">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="8" class="text-center text-muted py-4">
                                        <i class="fas fa-info-circle fa-2x mb-2 d-block"></i>
                                        <span>Nenhuma configuração de API cadastrada</span><br>
                                        <small>Clique em "Nova Configuração" para começar</small>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% include '_partials/pagination.html.twig' with {
                        totalItems: pagination.totalItems,
                        currentPage: pagination.currentPage,
                        itemsPerPage: pagination.itemsPerPage,
                        totalPages: pagination.totalPages,
                        search: pagination.search,
                        routeName: 'app_configuracao_api_banco_index',
                        filters: pagination.filters,
                        sortField: pagination.sortField,
                        sortDir: pagination.sortDir,
                        showSearch: false
                    } %}
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalTesteConexao" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-plug"></i> Teste de Conexão</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalTesteConexaoBody">
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Verificando...</span>
                    </div>
                    <p class="mt-2">Verificando configuração...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    window.ROUTES = {
        delete: '{{ path('app_configuracao_api_banco_delete', {id: '__ID__'}) }}',
        testarConexao: '{{ path('app_configuracao_api_banco_testar_conexao', {id: '__ID__'}) }}'
    };
</script>
<script src="{{ asset('build/configuracao_api_banco.js') }}"></script>
{{ encore_entry_script_tags('crud_filters') }}
{% endblock %}
