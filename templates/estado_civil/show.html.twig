{% extends 'base.html.twig' %}

{% block title %}{{ estado_civil.nome }} - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Tipos', 'url': path('app_dashboard_tipos_index')},
            {'label': 'Lista de Estados Civis', 'url': path('app_estado_civil_index')}
        ],
        'current': 'Ver Estado Civil'
    } %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-ring"></i> {{ estado_civil.nome }}</h1>
                <div>
                    <a href="{{ path('app_estado_civil_edit', {'id': estado_civil.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar Estado Civil
                    </a>
                    <a href="{{ path('app_estado_civil_index') }}" class="btn btn-secondary ms-2">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="150">ID:</th>
                                    <td>{{ estado_civil.id }}</td>
                                </tr>
                                <tr>
                                    <th>Nome:</th>
                                    <td><strong>{{ estado_civil.nome }}</strong></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
