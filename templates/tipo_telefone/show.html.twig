{% extends 'base.html.twig' %}

{% block title %}{{ tipo_telefone.tipo }} - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-phone"></i> {{ tipo_telefone.tipo }}</h1>
                <div>
                    <a href="{{ path('app_tipo_telefone_edit', {'id': tipo_telefone.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar Tipo
                    </a>
                    <a href="{{ path('app_tipo_telefone_index') }}" class="btn btn-secondary ms-2">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="150">ID:</th>
                                    <td>{{ tipo_telefone.id }}</td>
                                </tr>
                                <tr>
                                    <th>Tipo:</th>
                                    <td><strong>{{ tipo_telefone.tipo }}</strong></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}