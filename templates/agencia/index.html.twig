
{% extends 'base.html.twig' %}

{% block title %}Agências - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'current': 'Lista de Agências'
    } %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-building"></i> Agências</h1>
                <a href="{{ path('app_agencia_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nova Agência
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th width="80">ID</th>
                                    <th>Código</th>
                                    <th>Nome</th>
                                    <th>Banco</th>
                                    <th>Endereço</th>
                                    <th width="200">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for agencia in agencias %}
                                <tr>
                                    <td>{{ agencia.id }}</td>
                                    <td><strong>{{ agencia.codigo }}</strong></td>
                                    <td>{{ agencia.nome }}</td>
                                    <td>{{ agencia.idBanco }}</td>
                                    <td>{{ agencia.idEndereco ?? '-' }}</td>
                                    <td>
                                        <div class="btn-group-vertical btn-group-sm d-md-none" role="group">
                                            <a href="{{ path('app_agencia_show', {'id': agencia.id}) }}" 
                                               class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Ver
                                            </a>
                                            <a href="{{ path('app_agencia_edit', {'id': agencia.id}) }}" 
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                        </div>
                                        <div class="btn-group d-none d-md-flex" role="group">
                                            <a href="{{ path('app_agencia_show', {'id': agencia.id}) }}" 
                                               class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Ver
                                            </a>
                                            <a href="{{ path('app_agencia_edit', {'id': agencia.id}) }}" 
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <form method="post" 
                                                  action="{{ path('app_agencia_delete', {'id': agencia.id}) }}" 
                                                  style="display:inline-block"
                                                  onsubmit="return confirm('Tem certeza que deseja excluir esta agência?')">
                                                <input type="hidden" name="_token" 
                                                       value="{{ csrf_token('delete' ~ agencia.id) }}">
                                                <button class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i> Excluir
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="6" class="text-center text-muted py-4">
                                        <i class="fas fa-info-circle fa-2x mb-2 d-block"></i>
                                        <span>Nenhuma agência cadastrada</span><br>
                                        <small>Clique em "Nova Agência" para começar</small>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 