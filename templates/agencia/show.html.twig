{% extends 'base.html.twig' %}

{% block title %}Agência: {{ agencia.nome }} - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Lista de Agências', 'url': path('app_agencia_index')}
        ],
        'current': 'Ver Agência'
    } %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-building"></i> Agência: {{ agencia.nome }}</h1>
                <div>
                    <a href="{{ path('app_agencia_edit', {'id': agencia.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a href="{{ path('app_agencia_index') }}" class="btn btn-secondary ms-2">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle"></i> Informações da Agência
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <th width="120"><i class="fas fa-hashtag text-muted"></i> ID:</th>
                                        <td><strong>{{ agencia.id }}</strong></td>
                                    </tr>
                                    <tr>
                                        <th><i class="fas fa-code text-muted"></i> Código:</th>
                                        <td><span class="badge bg-primary">{{ agencia.codigo }}</span></td>
                                    </tr>
                                    <tr>
                                        <th><i class="fas fa-building text-muted"></i> Nome:</th>
                                        <td><strong>{{ agencia.nome }}</strong></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <th width="120"><i class="fas fa-university text-muted"></i> Banco:</th>
                                        <td>{{ agencia.idBanco }}</td>
                                    </tr>
                                    <tr>
                                        <th><i class="fas fa-map-marker-alt text-muted"></i> Endereço:</th>
                                        <td>
                                            {% if agencia.idEndereco %}
                                                {{ agencia.idEndereco }}
                                            {% else %}
                                                <span class="text-muted">Não informado</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <div>
                            <a href="{{ path('app_agencia_edit', {'id': agencia.id}) }}" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Editar Agência
                            </a>
                        </div>
                        <div>
                            <a href="{{ path('app_agencia_index') }}" class="btn btn-secondary">
                                <i class="fas fa-list"></i> Lista de Agências
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 