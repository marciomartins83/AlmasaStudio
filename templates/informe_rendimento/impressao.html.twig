<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Informe de Rendimentos {{ ano }}</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            font-size: 10pt;
            line-height: 1.4;
            padding: 20px;
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid #333;
        }

        .header h1 {
            font-size: 16pt;
            margin-bottom: 5px;
        }

        .header p {
            font-size: 10pt;
            color: #666;
        }

        .info-box {
            background: #f5f5f5;
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 4px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 6px 8px;
            text-align: left;
        }

        th {
            background: #333;
            color: white;
            font-weight: bold;
            font-size: 9pt;
        }

        td {
            font-size: 9pt;
        }

        .text-end {
            text-align: right;
        }

        .text-center {
            text-align: center;
        }

        .fw-bold {
            font-weight: bold;
        }

        .bg-light {
            background: #f8f9fa;
        }

        .total-row {
            background: #e9ecef;
            font-weight: bold;
        }

        .proprietario-header {
            background: #0d6efd;
            color: white;
            padding: 10px;
            margin-top: 20px;
            margin-bottom: 10px;
        }

        .page-break {
            page-break-after: always;
        }

        .footer {
            margin-top: 30px;
            padding-top: 10px;
            border-top: 1px solid #ddd;
            font-size: 8pt;
            color: #666;
            text-align: center;
        }

        @media print {
            body {
                padding: 10px;
            }

            .no-print {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="no-print" style="margin-bottom: 20px; text-align: center;">
        <button onclick="window.print()" style="padding: 10px 20px; font-size: 14px; cursor: pointer;">
            Imprimir / Salvar PDF
        </button>
        <button onclick="window.close()" style="padding: 10px 20px; font-size: 14px; cursor: pointer; margin-left: 10px;">
            Fechar
        </button>
    </div>

    <div class="header">
        <h1>INFORME DE RENDIMENTOS</h1>
        <p>Ano-Calendário: {{ ano }}</p>
        {% if abaterTaxa %}
            <p style="color: #0d6efd;">* Valores com abatimento de taxa de administração</p>
        {% endif %}
    </div>

    {% if modelo == 2 %}
        {# MODELO 2 - Agrupado por Proprietário #}
        {% for grupo in dados %}
            <div class="proprietario-header">
                <strong>Proprietário:</strong> {{ grupo.proprietario }}
            </div>

            <table>
                <thead>
                    <tr>
                        <th style="width: 80px;">Imóvel</th>
                        <th style="width: 150px;">Inquilino</th>
                        <th>Conta</th>
                        <th class="text-end" style="width: 60px;">Jan</th>
                        <th class="text-end" style="width: 60px;">Fev</th>
                        <th class="text-end" style="width: 60px;">Mar</th>
                        <th class="text-end" style="width: 60px;">Abr</th>
                        <th class="text-end" style="width: 60px;">Mai</th>
                        <th class="text-end" style="width: 60px;">Jun</th>
                        <th class="text-end" style="width: 60px;">Jul</th>
                        <th class="text-end" style="width: 60px;">Ago</th>
                        <th class="text-end" style="width: 60px;">Set</th>
                        <th class="text-end" style="width: 60px;">Out</th>
                        <th class="text-end" style="width: 60px;">Nov</th>
                        <th class="text-end" style="width: 60px;">Dez</th>
                        <th class="text-end" style="width: 80px;">Total</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in grupo.imoveis %}
                        <tr>
                            <td>{{ item.imovel }}</td>
                            <td>{{ item.inquilino }}</td>
                            <td>{{ item.conta }}</td>
                            {% for mes in 1..12 %}
                                <td class="text-end">{{ item.valores[mes]|number_format(2, ',', '.') }}</td>
                            {% endfor %}
                            <td class="text-end fw-bold">{{ item.total|number_format(2, ',', '.') }}</td>
                        </tr>
                    {% endfor %}
                    <tr class="total-row">
                        <td colspan="3" class="text-end">TOTAL DO PROPRIETÁRIO:</td>
                        <td colspan="13" class="text-end">R$ {{ grupo.totalGeral|number_format(2, ',', '.') }}</td>
                    </tr>
                </tbody>
            </table>
        {% else %}
            <div class="info-box text-center">
                Nenhum dado encontrado para os filtros selecionados.
            </div>
        {% endfor %}

    {% else %}
        {# MODELO 1 - Detalhado #}
        <table>
            <thead>
                <tr>
                    <th style="width: 150px;">Proprietário</th>
                    <th style="width: 80px;">Imóvel</th>
                    <th style="width: 150px;">Inquilino</th>
                    <th>Conta</th>
                    <th class="text-end" style="width: 55px;">Jan</th>
                    <th class="text-end" style="width: 55px;">Fev</th>
                    <th class="text-end" style="width: 55px;">Mar</th>
                    <th class="text-end" style="width: 55px;">Abr</th>
                    <th class="text-end" style="width: 55px;">Mai</th>
                    <th class="text-end" style="width: 55px;">Jun</th>
                    <th class="text-end" style="width: 55px;">Jul</th>
                    <th class="text-end" style="width: 55px;">Ago</th>
                    <th class="text-end" style="width: 55px;">Set</th>
                    <th class="text-end" style="width: 55px;">Out</th>
                    <th class="text-end" style="width: 55px;">Nov</th>
                    <th class="text-end" style="width: 55px;">Dez</th>
                    <th class="text-end" style="width: 70px;">Total</th>
                </tr>
            </thead>
            <tbody>
                {% set totalGeral = 0 %}
                {% for item in dados %}
                    {% set totalGeral = totalGeral + item.total %}
                    <tr>
                        <td>{{ item.proprietario|slice(0, 25) }}</td>
                        <td>{{ item.imovel }}</td>
                        <td>{{ item.inquilino|slice(0, 25) }}</td>
                        <td>{{ item.conta|slice(0, 20) }}</td>
                        {% for mes in 1..12 %}
                            <td class="text-end">{{ item.valores[mes]|number_format(2, ',', '.') }}</td>
                        {% endfor %}
                        <td class="text-end fw-bold">{{ item.total|number_format(2, ',', '.') }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="17" class="text-center">Nenhum dado encontrado para os filtros selecionados.</td>
                    </tr>
                {% endfor %}

                {% if dados|length > 0 %}
                    <tr class="total-row">
                        <td colspan="4" class="text-end">TOTAL GERAL:</td>
                        <td colspan="13" class="text-end">R$ {{ totalGeral|number_format(2, ',', '.') }}</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    {% endif %}

    <div class="footer">
        Gerado em {{ "now"|date("d/m/Y H:i:s") }} - AlmasaStudio
    </div>
</body>
</html>
