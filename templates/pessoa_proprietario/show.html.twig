{% extends 'base.html.twig' %}

{% block title %}Proprietário - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [{'label': 'Lista de Proprietários', 'url': path('app_pessoa_proprietario_index')}],
        'current': 'Ver Proprietário'
    } %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-home"></i> Proprietário</h1>
                <div>
                    <a href="{{ path('app_pessoa_proprietario_edit', {'id': proprietario.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar Proprietário
                    </a>
                    <a href="{{ path('app_pessoa_proprietario_index') }}" class="btn btn-secondary ms-2">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="150">ID:</th>
                                    <td>{{ proprietario.id }}</td>
                                </tr>
                                <tr>
                                    <th>ID Pessoa:</th>
                                    <td><span class="badge bg-info fs-6">{{ proprietario.idPessoa }}</span></td>
                                </tr>
                                <tr>
                                    <th>Tipo:</th>
                                    <td><span class="badge bg-success fs-6">Proprietário</span></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}