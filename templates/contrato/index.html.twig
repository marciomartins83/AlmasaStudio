{% extends 'base.html.twig' %}

{% block title %}Contratos de Locação - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Dashboard', 'url': path('app_dashboard')}
        ],
        'current': 'Contratos de Locação'
    } %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {# Cards de estatísticas #}
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">Total de Contratos</h6>
                            <h2 class="mb-0">{{ estatisticas.total|default(0) }}</h2>
                        </div>
                        <i class="fas fa-file-contract fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">Contratos Ativos</h6>
                            <h2 class="mb-0">{{ estatisticas.ativos|default(0) }}</h2>
                        </div>
                        <i class="fas fa-check-circle fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">Encerrados</h6>
                            <h2 class="mb-0">{{ estatisticas.encerrados|default(0) }}</h2>
                        </div>
                        <i class="fas fa-stop-circle fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">Valor Total Ativos</h6>
                            <h2 class="mb-0">
                                R$ {{ estatisticas.valor_total_ativos|default(0)|number_format(0, ',', '.') }}
                            </h2>
                        </div>
                        <i class="fas fa-dollar-sign fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-file-contract"></i> Contratos de Locação</h1>
                <div>
                    <button type="button" class="btn btn-secondary me-2" data-bs-toggle="collapse" data-bs-target="#filtrosCollapse">
                        <i class="fas fa-filter"></i> Filtros
                    </button>
                    <a href="{{ path('app_contrato_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Novo Contrato
                    </a>
                </div>
            </div>

            {# Painel de filtros (colapsável) #}
            <div class="collapse {% if filtros|length > 0 %}show{% endif %} mb-3" id="filtrosCollapse">
                <div class="card">
                    <div class="card-body">
                        <form method="GET" action="{{ path('app_contrato_index') }}">
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label class="form-label">Status</label>
                                    <select name="status" class="form-select">
                                        <option value="">Todos</option>
                                        <option value="ativo" {% if filtros.status|default('') == 'ativo' %}selected{% endif %}>Ativo</option>
                                        <option value="encerrado" {% if filtros.status|default('') == 'encerrado' %}selected{% endif %}>Encerrado</option>
                                        <option value="rescindido" {% if filtros.status|default('') == 'rescindido' %}selected{% endif %}>Rescindido</option>
                                        <option value="pendente" {% if filtros.status|default('') == 'pendente' %}selected{% endif %}>Pendente</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Tipo de Contrato</label>
                                    <select name="tipo_contrato" class="form-select">
                                        <option value="">Todos</option>
                                        <option value="locacao" {% if filtros.tipoContrato|default('') == 'locacao' %}selected{% endif %}>Locação</option>
                                        <option value="temporada" {% if filtros.tipoContrato|default('') == 'temporada' %}selected{% endif %}>Temporada</option>
                                        <option value="comercial" {% if filtros.tipoContrato|default('') == 'comercial' %}selected{% endif %}>Comercial</option>
                                        <option value="residencial" {% if filtros.tipoContrato|default('') == 'residencial' %}selected{% endif %}>Residencial</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">Situação</label>
                                    <select name="ativo" class="form-select">
                                        <option value="">Todos</option>
                                        <option value="true" {% if filtros.ativo|default('') == 'true' %}selected{% endif %}>Ativos</option>
                                        <option value="false" {% if filtros.ativo|default('') == 'false' %}selected{% endif %}>Inativos</option>
                                    </select>
                                </div>
                                <div class="col-md-4 d-flex align-items-end">
                                    <button type="submit" class="btn btn-primary me-2">
                                        <i class="fas fa-search"></i> Buscar
                                    </button>
                                    <a href="{{ path('app_contrato_index') }}" class="btn btn-secondary">
                                        <i class="fas fa-times"></i> Limpar
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            {# Tabela de contratos #}
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th width="60">ID</th>
                                    <th>Imóvel</th>
                                    <th>Locatário</th>
                                    <th>Tipo</th>
                                    <th width="100">Início</th>
                                    <th width="100">Fim</th>
                                    <th width="120" class="text-end">Valor</th>
                                    <th width="80">Status</th>
                                    <th width="120">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for contrato in pagination.items %}
                                <tr>
                                    <td><strong>{{ contrato.id }}</strong></td>
                                    <td>
                                        {% if contrato.imovel %}
                                            <strong>{{ contrato.imovel.codigoInterno|default('-') }}</strong>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if contrato.pessoaLocatario %}
                                            {{ contrato.pessoaLocatario.nome }}
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">{{ contrato.tipoContrato|default('-') }}</span>
                                    </td>
                                    <td>
                                        {% if contrato.dataInicio %}
                                            {{ contrato.dataInicio|date('d/m/Y') }}
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if contrato.dataFim %}
                                            {{ contrato.dataFim|date('d/m/Y') }}
                                        {% else %}
                                            <span class="badge bg-info">Indeterminado</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        R$ {{ contrato.valorContrato|default(0)|number_format(2, ',', '.') }}
                                    </td>
                                    <td>
                                        {% if contrato.status == 'ativo' %}
                                            <span class="badge bg-success">Ativo</span>
                                        {% elseif contrato.status == 'encerrado' %}
                                            <span class="badge bg-info">Encerrado</span>
                                        {% elseif contrato.status == 'rescindido' %}
                                            <span class="badge bg-danger">Rescindido</span>
                                        {% else %}
                                            <span class="badge bg-warning">{{ contrato.status|default('-') }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_contrato_show', {id: contrato.id}) }}"
                                               class="btn btn-info btn-sm"
                                               title="Visualizar">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_contrato_edit', {id: contrato.id}) }}"
                                               class="btn btn-warning btn-sm"
                                               title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="9" class="text-center text-muted py-4">
                                        <i class="fas fa-info-circle fa-2x mb-2 d-block"></i>
                                        <span>Nenhum contrato cadastrado</span><br>
                                        <small>Clique em "Novo Contrato" para começar</small>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="card mt-2">
                <div class="card-body py-2">
                    {% include '_partials/pagination.html.twig' with {
                        totalItems: pagination.totalItems,
                        currentPage: pagination.currentPage,
                        itemsPerPage: pagination.itemsPerPage,
                        totalPages: pagination.totalPages,
                        search: pagination.search,
                        routeName: 'app_contrato_index'
                    } %}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    window.ROUTES = {
        vencimentoProximo: '{{ path('app_contrato_vencimento_proximo') }}',
        paraReajuste: '{{ path('app_contrato_para_reajuste') }}',
        estatisticas: '{{ path('app_contrato_estatisticas') }}'
    };
</script>
{% endblock %}
