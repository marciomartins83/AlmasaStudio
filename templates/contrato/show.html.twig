{% extends 'base.html.twig' %}

{% block title %}Detalhes do Contrato #{{ contrato.id }} - {{ parent() }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {% include '_partials/breadcrumb.html.twig' with {
        'items': [
            {'label': 'Dashboard', 'url': path('app_dashboard')},
            {'label': 'Contratos', 'url': path('app_contrato_index')}
        ],
        'current': 'Detalhes do Contrato'
    } %}

    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><i class="fas fa-file-contract"></i> Contrato #{{ contrato.id }}</h1>
                <div>
                    <a href="{{ path('app_contrato_edit', {id: contrato.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a href="{{ path('app_contrato_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </div>

            {# Card de Status #}
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card {% if contrato.status == 'ativo' %}border-success{% elseif contrato.status == 'encerrado' %}border-info{% else %}border-danger{% endif %}">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-3 text-center">
                                    <i class="fas fa-file-contract fa-4x {% if contrato.status == 'ativo' %}text-success{% elseif contrato.status == 'encerrado' %}text-info{% else %}text-danger{% endif %}"></i>
                                </div>
                                <div class="col-md-9">
                                    <h3>{{ contrato.status_label }}</h3>
                                    <p class="mb-1"><strong>Tipo:</strong> {{ contrato.tipo_contrato_label }}</p>
                                    <p class="mb-1"><strong>Período:</strong> {{ contrato.data_inicio|date('d/m/Y') }} até
                                        {% if contrato.data_fim %}{{ contrato.data_fim|date('d/m/Y') }}{% else %}<span class="badge bg-info">Indeterminado</span>{% endif %}
                                    </p>
                                    {% if contrato.duracao_meses %}
                                        <p class="mb-0"><strong>Duração:</strong> {{ contrato.duracao_meses }} meses</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                {# Dados do Imóvel #}
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-building"></i> Imóvel</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Código:</strong> {{ contrato.imovel_codigo }}</p>
                            <p><strong>Tipo:</strong> {{ contrato.imovel_tipo|default('-') }}</p>
                            <p><strong>Endereço:</strong><br>{{ contrato.imovel_endereco }}</p>
                        </div>
                    </div>
                </div>

                {# Dados das Partes - Painéis individuais #}
                <div class="col-12 mb-4">
                    {% if contrato.proprietario_dados %}
                        {% include '_partials/pessoa_panel.html.twig' with {'pessoa': contrato.proprietario_dados, 'papel': 'Proprietario', 'cor': 'dark'} %}
                    {% endif %}
                    {% if contrato.locatario_dados %}
                        {% include '_partials/pessoa_panel.html.twig' with {'pessoa': contrato.locatario_dados, 'papel': 'Inquilino / Locatario', 'cor': 'success'} %}
                    {% endif %}
                    {% if contrato.fiador_dados %}
                        {% include '_partials/pessoa_panel.html.twig' with {'pessoa': contrato.fiador_dados, 'papel': 'Fiador', 'cor': 'warning'} %}
                    {% endif %}
                </div>

                {# Valores #}
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-warning">
                            <h5 class="mb-0"><i class="fas fa-dollar-sign"></i> Valores</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-6">
                                    <p><strong>Valor do Contrato:</strong><br>
                                        <span class="h5 text-primary">R$ {{ contrato.valor_contrato|number_format(2, ',', '.') }}</span>
                                    </p>
                                </div>
                                <div class="col-6">
                                    <p><strong>Taxa Administração:</strong><br>
                                        <span class="h5 text-danger">{{ contrato.taxa_administracao }}%</span>
                                    </p>
                                </div>
                                <div class="col-12">
                                    <p><strong>Valor Líquido Proprietário:</strong><br>
                                        <span class="h5 text-success">R$ {{ contrato.valor_liquido_proprietario|number_format(2, ',', '.') }}</span>
                                    </p>
                                </div>
                                <div class="col-6">
                                    <p class="mb-0"><strong>Dia Vencimento:</strong><br>
                                        {{ contrato.dia_vencimento|default('Não definido') }}
                                    </p>
                                </div>
                                <div class="col-6">
                                    <p class="mb-0"><strong>Carência:</strong><br>
                                        {{ contrato.carencia_dias }} dias
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {# Reajustes #}
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="fas fa-chart-line"></i> Reajustes</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Índice:</strong> {{ contrato.indice_reajuste }}</p>
                            <p><strong>Periodicidade:</strong> {{ contrato.periodicidade_reajuste|capitalize }}</p>
                            <p class="mb-0"><strong>Próximo Reajuste:</strong><br>
                                {% if contrato.data_proximo_reajuste %}
                                    {{ contrato.data_proximo_reajuste|date('d/m/Y') }}
                                {% else %}
                                    <span class="text-muted">Não agendado</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                </div>

                {# Garantia #}
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0"><i class="fas fa-shield-alt"></i> Garantia</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Tipo:</strong> {{ contrato.tipo_garantia_label }}</p>
                            {% if contrato.tipo_garantia == 'caucao' %}
                                <p class="mb-0"><strong>Valor da Caução:</strong><br>
                                    <span class="h5">R$ {{ contrato.valor_caucao|number_format(2, ',', '.') }}</span>
                                </p>
                            {% endif %}
                            <p class="mb-0"><strong>Multa por Rescisão:</strong><br>
                                R$ {{ contrato.multa_rescisao|number_format(2, ',', '.') }}
                            </p>
                        </div>
                    </div>
                </div>

                {# Configurações #}
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-dark text-white">
                            <h5 class="mb-0"><i class="fas fa-cog"></i> Configurações</h5>
                        </div>
                        <div class="card-body">
                            <p>
                                <i class="fas fa-barcode"></i>
                                <strong>Gerar Boleto:</strong>
                                {% if contrato.gera_boleto %}
                                    <span class="badge bg-success">Sim</span>
                                {% else %}
                                    <span class="badge bg-danger">Não</span>
                                {% endif %}
                            </p>
                            <p>
                                <i class="fas fa-envelope"></i>
                                <strong>Enviar E-mail:</strong>
                                {% if contrato.envia_email %}
                                    <span class="badge bg-success">Sim</span>
                                {% else %}
                                    <span class="badge bg-danger">Não</span>
                                {% endif %}
                            </p>
                            <p class="mb-0">
                                <i class="fas fa-check-circle"></i>
                                <strong>Ativo:</strong>
                                {% if contrato.ativo %}
                                    <span class="badge bg-success">Sim</span>
                                {% else %}
                                    <span class="badge bg-danger">Não</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                </div>

                {# Observações #}
                {% if contrato.observacoes %}
                <div class="col-12 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-sticky-note"></i> Observações</h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-0">{{ contrato.observacoes|nl2br }}</p>
                        </div>
                    </div>
                </div>
                {% endif %}

                {# Informações de Auditoria #}
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <small class="text-muted">
                                <i class="fas fa-calendar-plus"></i> Criado em: {{ contrato.created_at|date('d/m/Y H:i:s') }}
                                | <i class="fas fa-calendar-check"></i> Atualizado em: {{ contrato.updated_at|date('d/m/Y H:i:s') }}
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
